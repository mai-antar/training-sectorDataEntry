@model IEnumerable<TrainigSectorDataEntry.ViewModel.StudentActiviteVM>

@{
    ViewData["Title"] = "الانشطة الطلابية";
}

<div class="container-fluid">
    <div class="contPage">


        <div class="orang2">
            <h3>الانشطة الطلابية </h3>
            <div></div>
        </div>


    </div>

    <a asp-action="Create" class="button right-4tens ">

        <span class="button__text"> إضافة انشطة طلابية</span>
        <span class="button__icon"><svg xmlns="http://www.w3.org/2000/svg" width="24" viewBox="0 0 24 24" stroke-width="2" stroke-linejoin="round" stroke-linecap="round" stroke="currentColor" height="24" fill="none" class="svg"><line y2="19" y1="5" x2="12" x1="12"></line><line y2="12" y1="12" x2="19" x1="5"></line></svg></span>

    </a>

<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            <th>التفاصيل باللغة العربية</th>
            <th>التفاصيل باللغة الانجليزية</th>
            <th>المنشأت التعليمية</th>
            <th>التفعيل</th>
            <th>الصورة</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var studentActivite in Model)
        {
            <tr>
                <td>@studentActivite.DescriptionAr</td>
                <td>@studentActivite.DescriptionEn</td>
                <td>@studentActivite.EducationalFacilities?.NameAr</td>
                <td>
                    @if (studentActivite.IsActive)
                    {
                        <span class="badge bg-success">مفعل</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">غير مفعل</span>
                    }
                </td>
                <td>


                        @foreach (var item in studentActivite.StudentActiviteImages)
                        {
                            <img src="/Files/@item.ImagePath" alt="Project Image" style="width: 60px; height: 60px; object-fit: cover; margin: 2px;" />


                        }
                        <a href="javascript:void(0)"
                           class="buttoneimg right-4tens"
                           onclick="openImageUpload(@studentActivite.Id)">
                            <span class="buttoneimg__text">إضافة صورة</span>
                            <span class="buttoneimg__icon">+</span>
                        </a>
                </td>
                <td>
                        <a asp-action="Edit" asp-route-id="@studentActivite.Id" class="buttonedit right-4tens ">
                            <span class="buttonedit__text">تعديل</span>
                            <span class="buttonedit__icon"> <i class="fas fa-edit"></i></span>
                        </a>

                        <a href="javascript:void(0);" class="buttonremove right-4tens "
                           onclick="confirmDelete(@studentActivite.Id)">
                            <span class="buttonremove__text"> حذف</span>
                            <span class="buttonremove__icon"> <i class="fa-solid fa-x"></i></span>
                        </a>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>
<div class="modal fade" id="uploadImageModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-controller="EntityImage"
                  asp-action="Upload"
                  method="post"
                  enctype="multipart/form-data">

                <div class="modal-header">
                    <h5 class="modal-title">إضافة صور</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <input type="hidden" name="EntityType" value=6 />
                    <input type="hidden" name="EntityId" id="entityIdInput" />

                    <input type="file" name="UploadedImages" multiple class="form-control" />
                </div>

                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">حفظ</button>
                </div>

            </form>
        </div>
    </div>
</div>
<script>
    function confirmDelete(id) {
        Swal.fire({
            title: 'هل أنت متأكد؟',
            text: "لن تتمكن من التراجع عن هذا!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#dc3545', // red
            cancelButtonColor: '#6c757d', // grey
            confirmButtonText: 'نعم، احذف!',
            cancelButtonText: 'إلغاء'
        }).then((result) => {
            if (result.isConfirmed) {
                // Navigate to Delete action
                window.location.href = '/StudentActivite/Delete/' + id;
            }
        });
    }
          function openImageUpload(studentActiviteId) {
        document.getElementById("entityIdInput").value = studentActiviteId;
        var modal = new bootstrap.Modal(document.getElementById('uploadImageModal'));
        modal.show();
    }
</script>