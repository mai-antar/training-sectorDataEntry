@model List<TrainigSectorDataEntry.ViewModel.StudentActiviteVM>


@foreach (var studentActivite in Model)
{
    <tr>
        <td>@studentActivite.DescriptionAr</td>
        <td>@studentActivite.DescriptionEn</td>
        <td>@studentActivite.EducationalFacilities?.NameAr</td>
        <td>@studentActivite.UserCreationDate?.ToString("yyyy-MM-dd")</td>
        <td>
            @if (studentActivite.IsActive)
            {
                <span class="badge bg-success">مفعل</span>
            }
            else
            {
                <span class="badge bg-danger">غير مفعل</span>
            }
        </td>
        <td>

            <img src="/Files/@studentActivite.ImagePath" alt="Project Image" style="width: 60px; height: 60px; object-fit: cover; margin: 2px;" />



        </td>
        <td>
            <a asp-action="Edit" asp-route-id="@studentActivite.Id" class="btn btn-sm btn-warning">تعديل</a>

            <a asp-action="Delete" asp-route-id="@studentActivite.Id" class="btn btn-sm btn-danger">حذف</a>
        </td>
    </tr>
}

