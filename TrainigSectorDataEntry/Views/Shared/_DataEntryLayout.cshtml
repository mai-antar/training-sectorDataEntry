<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - الموقع</title>
    <!-- Bootstrap RTL (4.x) -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-rtl@4.6.2-1/dist/css/bootstrap-rtl.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .sidebar {
            height: 100vh;
            position: fixed;
            right: 0;
            top: 0;
            background-color: #f8f9fa;
            padding-top: 20px;
            width: 220px;
        }

        .main-content {
            margin-right: 220px;
            padding: 20px;
        }

        .submenu {
            padding-right: 15px;
        }

        .nav-link {
            color: #333;
        }

            .nav-link:hover,
            .nav-link.active {
                color: #007bff;
            }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-2 sidebar">
                <div class="sidebar-sticky">
                    <h5 class="pl-3 pr-3">القائمة</h5>
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link" href="/">الرئيسية</a>
                        </li>

                        <!-- Menu with Submenu -->
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="collapse" href="#submenu1" role="button" aria-expanded="false" aria-controls="submenu1">
                                المنتجات
                            </a>
                            <div class="collapse" id="submenu1">
                                <ul class="nav flex-column submenu">
                                    <li class="nav-item">
                                        <a class="nav-link" href="/Products/All">جميع المنتجات</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="/Products/New">منتجات جديدة</a>
                                    </li>
                                </ul>
                            </div>
                        </li>

                        <!-- Another Menu with Submenu -->
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="collapse" href="#submenu2" role="button" aria-expanded="false" aria-controls="submenu2">
                                الإعدادات
                            </a>
                            <div class="collapse" id="submenu2">
                                <ul class="nav flex-column submenu">
                                    <li class="nav-item">
                                        <a class="nav-link" href="/Settings/Profile">الملف الشخصي</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="/Settings/Security">الأمان</a>
                                    </li>
                                </ul>
                            </div>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="/Contact">اتصل بنا</a>
                        </li>
                    </ul>
                </div>
            </nav>

            <!-- Main Content -->
            <main role="main" class="col-md-10 main-content">
                <div class="pt-3">
                    @RenderBody()
                </div>
            </main>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
