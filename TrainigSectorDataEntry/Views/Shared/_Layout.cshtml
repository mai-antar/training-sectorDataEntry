    <!-- Toastr CSS -->
    <link href="~/toastr/toastr.min.css" rel="stylesheet" />

    <!-- jQuery (needed by Toastr) -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <!-- Toastr JS -->
    <script src="~/toastr/toastr.min.js"></script>

    <script>
        $(document).ready(function () {

            // Toastr default options
            toastr.options = {
                "closeButton": false,
                "progressBar": false,
                "positionClass": "toast-bottom-left",
                "timeOut": "4000",
                "extendedTimeOut": "1000",
                "showEasing": "swing",
                "hideEasing": "linear",
                "showMethod": "fadeIn",
                "hideMethod": "fadeOut",
                "rtl": true
            };

            // Function to show toastr safely
            function showToastr(message, type) {
                if (type === "success") toastr.success(message);
                else if (type === "error") toastr.error(message);
            }

            // Only show alerts if the page is NOT loaded from bfcache
            window.addEventListener('pageshow', function (event) {
                if (!event.persisted) { // page is NOT loaded from cache
        @* TempData Success *@
        @if (TempData["Success"] != null)
        {
            <text>
                                showToastr(@Html.Raw(System.Text.Json.JsonSerializer.Serialize(TempData["Success"])), "success");
            </text>
        }

        @* TempData Error *@
        @if (TempData["Error"] != null)
        {
            <text>
                                showToastr(@Html.Raw(System.Text.Json.JsonSerializer.Serialize(TempData["Error"])), "error");
            </text>
        }
                }
            });
        });
    </script>



 


