@model IEnumerable<TrainigSectorDataEntry.ViewModel.TrainingCourseVM>

@{
    ViewData["Title"] = " الدورات التدريبية";
}

<h2 class="text-center" style="margin-bottom: 80px;">الدورات التدريبية</h2>

<a asp-action="Create" class="btn btn-success mb-3">إضافة الدورات التدريبية</a>

<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            <th>الاسم باللغة العربية</th>
            <th>الاسم باللغة الانجليزية</th>
            <th>نوع الدورات التدريبية</th>
            <th>الملف</th>
            <th>التفعيل</th>


            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var trainingCourse in Model)
        {
            <tr>
                <td>@trainingCourse.NameAr</td>
                <td>@trainingCourse.NameEn</td>
                <td>@trainingCourse.TrainigCoursesTypes?.NameAr</td>
                <td>
                    @if (!string.IsNullOrEmpty(trainingCourse.FilePath))
                    {
                        <a asp-controller="Files" asp-action="Download" asp-route-filePath="@trainingCourse.FilePath">
                            تحميل
                        </a>
                       @*  <a href="@("/Storage/" + trainingCourse.FilePath)" target="_blank">تحميل</a> *@
                    }
                </td>
                <td>
                    @if (trainingCourse.IsActive)
                    {
                        <span class="badge bg-success">مفعل</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">غير مفعل</span>
                    }
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@trainingCourse.Id" class="btn btn-sm btn-warning">تعديل</a>

                    <a asp-action="Delete" asp-route-id="@trainingCourse.Id" class="btn btn-sm btn-danger">حذف</a>
                </td>
            </tr>
        }
    </tbody>
</table>
