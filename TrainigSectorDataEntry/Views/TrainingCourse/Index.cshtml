@model IEnumerable<TrainigSectorDataEntry.ViewModel.TrainingCourseVM>

@{
    ViewData["Title"] = " الدورات التدريبية";
}

<div class="container-fluid">
    <div class="contPage">


        <div class="orang2">
            <h3>الدورات التدريبية </h3>
            <div></div>
        </div>


    </div>
    <a asp-action="Create" class="button right-4tens ">
        <span class="button__text"> إضافة الدورات التدريبية</span>
        <span class="button__icon"><svg xmlns="http://www.w3.org/2000/svg" width="24" viewBox="0 0 24 24" stroke-width="2" stroke-linejoin="round" stroke-linecap="round" stroke="currentColor" height="24" fill="none" class="svg"><line y2="19" y1="5" x2="12" x1="12"></line><line y2="12" y1="12" x2="19" x1="5"></line></svg></span>

        </a>

<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            <th>الاسم باللغة العربية</th>
            <th>الاسم باللغة الانجليزية</th>
            <th>نوع الدورات التدريبية</th>
            <th>الملف</th>
            <th>التفعيل</th>


            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var trainingCourse in Model)
        {
            <tr>
                <td>@trainingCourse.NameAr</td>
                <td>@trainingCourse.NameEn</td>
                <td>@trainingCourse.TrainigCoursesTypes?.NameAr</td>
                <td>
                    @if (!string.IsNullOrEmpty(trainingCourse.FilePath))
                    {
                        <a asp-controller="Files" asp-action="Download" asp-route-filePath="@trainingCourse.FilePath">
                            تحميل
                        </a>
                       @*  <a href="@("/Storage/" + trainingCourse.FilePath)" target="_blank">تحميل</a> *@
                    }
                </td>
                <td>
                    @if (trainingCourse.IsActive)
                    {
                        <span class="badge bg-success">مفعل</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">غير مفعل</span>
                    }
                </td>

                <td>
                        <a asp-action="Edit" asp-route-id="@trainingCourse.Id" class="buttonedit right-4tens ">
                            <span class="buttonedit__text">تعديل</span>
                            <span class="buttonedit__icon"> <i class="fas fa-edit"></i></span>
                        </a>

                        <a asp-action="Delete" asp-route-id="@trainingCourse.Id" class="buttonremove right-4tens ">
                            <span class="buttonremove__text"> حذف</span>
                            <span class="buttonremove__icon"> <i class="fa-solid fa-x"></i></span>
                        </a>
                </td>
            </tr>
        }
    </tbody>
</table>
