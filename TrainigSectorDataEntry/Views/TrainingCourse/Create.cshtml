@model TrainigSectorDataEntry.ViewModel.TrainingCourseVM

@{
    ViewData["Title"] = " الدورات التدريبية";
}


<div class="container-fluid">
    <div class="contPage">


        <div class="orang2">
            <h3>انواع الدورات التدريبية </h3>
            <div></div>
        </div>


    </div>
<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <br />
    <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="TrainigCoursesTypesId" class="control-label">نوع الدورات التدريبية</label>
                    <select asp-for="TrainigCoursesTypesId" asp-items="ViewBag.TrainingCoursesTypeList" class="form-control">
                        <option value="">-- اختر نوع الدورات التدريبية --</option>
                    </select>
                    <span asp-validation-for="TrainigCoursesTypesId" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="NameAr" class="control-label">الاسم باللغة العربية</label>
                    <input asp-for="NameAr" class="form-control" />
                    <span asp-validation-for="NameAr" class="text-danger"></span>
                </div>
            </div>
    </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="NameEn" class="control-label">الاسم باللغة الانجليزي</label>
                    <input asp-for="NameEn" class="form-control" />
                    <span asp-validation-for="NameEn" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="UploadedFile">تحميل الملف</label>
                    <input asp-for="UploadedFile" type="file" class="form-control" />
                    <span asp-validation-for="UploadedFile" class="text-danger"></span>
                </div>
            </div>
        </div>
   
    

    <br />
        <div class="row">

            <div class="col-md-6">
                <button type="submit" class="button right-4tens float-left">


                    <span class="button__text"> إضافة</span>
                    <span class="button__icon"><svg xmlns="http://www.w3.org/2000/svg" width="24" viewBox="0 0 24 24" stroke-width="2" stroke-linejoin="round" stroke-linecap="round" stroke="currentColor" height="24" fill="none" class="svg"><line y2="19" y1="5" x2="12" x1="12"></line><line y2="12" y1="12" x2="19" x1="5"></line></svg></span>

                </button>
            </div>
            <div class="col-md-6">
                <a class="buttonremove right-4tens float-right" style="border: 1px solid #333333;background-color: #333333;" asp-action="Index">
                    <span class="buttonremove__text"> إلغاء</span>
                    <span class="buttonremove__icon" style="background-color: #333333;"> <i class="fa-solid fa-x"></i></span>
                </a>
            </div>
        </div>
</form>
<div class="card mt-5">
    <div class="card-header">
        <strong class="text-center" style="margin-bottom: 80px;"> الدورات التدريبية</strong>
    </div>
    <div class="card-body">
        <h3>الدورات التدريبية</h3>

        <table class="table table-bordered table-striped">
                <thead class="thead-dark">
                <tr>
                    <th>الاسم باللغة العربية</th>
                    <th>الاسم باللغة الانجليزية</th>
                    <th>نوع الدورات التدريبية</th>
                    <th>الملف</th>
                    <th>التفعيل</th>

                </tr>
            </thead>
            <tbody>
                @Html.Partial("_TrainingCoursePartial", (List<TrainigSectorDataEntry.ViewModel.TrainingCourseVM>)ViewBag.existingTrainingCourse)
                            </tbody>
        </table>

    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function() {
            $('#TrainigCoursesTypesId').change(function() {
                var trainigCoursesTypesId = $(this).val();
                if (trainigCoursesTypesId) {
                    $.ajax({
                        url: '@Url.Action("GetTrainingCourseByTrainingCourseType", "TrainingCourse")',
                        type: 'GET',
                        data: { trainigCoursesTypesId: trainigCoursesTypesId },
                        success: function(data) {
                            $('#trainingCourseTable tbody').html(data);
                        }
                    });
                } else {
                    $('#trainingCourseTable tbody').html('');
                }
            });
        });
    </script>
}
</div>