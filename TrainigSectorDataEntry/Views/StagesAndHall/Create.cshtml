@model TrainigSectorDataEntry.ViewModel.StagesAndHallVM

@{
    ViewData["Title"] = "القاعات والمسارح";
}

<h2>إضافة قاعة او مسرح</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <br />
    <div class="form-group">
        <label asp-for="TrainigSectorId" class="control-label">اسم الجهة</label>
        <select asp-for="TrainigSectorId" asp-items="ViewBag.TrainingSectorList" class="form-control">
            <option value="">-- اختر الجهة --</option>
        </select>
        <span asp-validation-for="TrainigSectorId" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="DescriptionAr" class="control-label">التفاصيل باللغة العربية</label>
        <textarea asp-for="DescriptionAr" class="form-control my-textarea"></textarea>
        <span asp-validation-for="DescriptionAr" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="DescriptionEn" class="control-label">التفاصيل باللغة الانجليزية</label>
        <textarea asp-for="DescriptionEn" class="form-control my-textarea" ></textarea>
        <span asp-validation-for="DescriptionEn" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        <label class="control-label">قاعة أم مسرح؟</label><br />

        <div class="form-check form-check-inline">
            <input class="form-check-input" asp-for="ISStage" type="radio" value="true" />
            <label class="form-check-label">مسرح</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" asp-for="ISStage" type="radio" value="false" />
            <label class="form-check-label">قاعة</label>
        </div>
        <span asp-validation-for="ISStage" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        <label for="UploadedImage">تحميل الصورة</label>
        <input asp-for="UploadedImage" type="file" multiple class="form-control" />
        <span asp-validation-for="UploadedImage" class="text-danger"></span>
    </div>
    <br />
    <button type="submit" class="btn btn-primary">إضافة</button>
    <a asp-action="Index" class="btn btn-secondary">إلغاء</a>
</form>
<div class="card mt-5">
    <div class="card-header">
        <strong class="text-center" style="margin-bottom: 80px;">شهادات الجودة</strong>
    </div>
    <div class="card-body">
        <h3>شهادات الجودة</h3>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>الوصف باللغة العربية</th>
                    <th>الوصف باللغة الانجليزية</th>
                    <th>الجهة</th>
                    <th>قاعة أم مسرح</th>
                    <th>التفعيل</th>
                    <th>الصورة</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var stagesAndHall in (List<TrainigSectorDataEntry.ViewModel.StagesAndHallVM>)ViewBag.ExistingStagesAndHall)
                {
                    <tr>
                        <td>@stagesAndHall.DescriptionAr</td>
                        <td>@stagesAndHall.DescriptionAr</td>
                        <td>@stagesAndHall.TrainigSector?.NameAr</td>
                        <td>@stagesAndHall.UserCreationDate?.ToString("yyyy-MM-dd")</td>
                        <td>
                            @if (stagesAndHall.ISStage == true)
                            {
                                <span class="badge bg-success">مسرح</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">قاعة</span>
                            }
                        </td>
                        <td>
                            @if (stagesAndHall.IsActive)
                            {
                                <span class="badge bg-success">مفعل</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">غير مفعل</span>
                            }
                        </td>
                        <td>

                            <img src="/Files/@stagesAndHall.ImagePath" alt="Project Image" style="width: 60px; height: 60px; object-fit: cover; margin: 2px;" />



                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@stagesAndHall.Id" class="btn btn-sm btn-warning">تعديل</a>

                            <a asp-action="Delete" asp-route-id="@stagesAndHall.Id" class="btn btn-sm btn-danger">حذف</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
