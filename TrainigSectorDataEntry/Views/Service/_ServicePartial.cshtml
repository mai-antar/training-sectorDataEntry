@model List<TrainigSectorDataEntry.ViewModel.ServiceVM>


@foreach (var service in Model)
{
    <tr>
        <td>@service.TitleAr</td>
        <td>@service.TitleEn</td>
        <td>@service.DescriptionAr</td>
        <td>@service.DescriptionEn</td>
        <td>@service.EducationalFacilities?.NameAr</td>
        <td>@service.UserCreationDate?.ToString("yyyy-MM-dd")</td>
        <td>
            @if (service.IsActive)
            {
                <span class="badge bg-success">مفعل</span>
            }
            else
            {
                <span class="badge bg-danger">غير مفعل</span>
            }
        </td>
        <td>

            <img src="/Files/@service.ImagePath" alt="Project Image" style="width: 60px; height: 60px; object-fit: cover; margin: 2px;" />



        </td>
        <td>
            
            <a class="buttonedit right-4tens " asp-action="Edit" asp-route-id="@service.Id">
                <span class="buttonedit__text">تعديل</span>
                <span class="buttonedit__icon"> <i class="fas fa-edit"></i></span>
            </a>
            <a class="buttonremove right-4tens " asp-action="Delete" asp-route-id="@service.Id">
                <span class="buttonremove__text"> حذف</span>
                <span class="buttonremove__icon"> <i class="fa-solid fa-x"></i></span>
            </a>
        </td>
    </tr>
}

