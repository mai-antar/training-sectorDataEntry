@model TrainigSectorDataEntry.ViewModel.NewsImageVM

@{
    ViewData["Title"] = "إضافة صور للخبر";
}

<h2 class="text-center" style="margin-bottom: 80px;">إضافة صور للخبر</h2>

<form asp-action="AddImages" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="NewsId" />
    <br />
      <div class="form-group">
        <label asp-for="TitleAr" class="control-label">عنوان الخبر </label>
        <input asp-for="TitleAr" class="form-control" readonly/>
        <span asp-validation-for="TitleAr" class="text-danger"></span>
    </div> 
    <br />
    <div class="form-group">
        <label>اختار صور</label>
        <input asp-for="UploadedImages" type="file" multiple class="form-control" />
        <span asp-validation-for="UploadedImages" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">تحميل</button>
    <a asp-action="Index" class="btn btn-secondary">الرجوع للقائمة</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
