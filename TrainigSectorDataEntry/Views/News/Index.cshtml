@model IEnumerable<TrainigSectorDataEntry.ViewModel.NewsVM>

@{
    ViewData["Title"] = "الأخبار";
}

<div class="container-fluid">
    <div class="contPage">


        <div class="orang2">
            <h3>الأخبار </h3>
            <div></div>
        </div>


    </div>
    <a asp-action="Create" class="button right-4tens ">
        <span class="button__text"> إضافة خبر</span>
        <span class="button__icon"><svg xmlns="http://www.w3.org/2000/svg" width="24" viewBox="0 0 24 24" stroke-width="2" stroke-linejoin="round" stroke-linecap="round" stroke="currentColor" height="24" fill="none" class="svg"><line y2="19" y1="5" x2="12" x1="12"></line><line y2="12" y1="12" x2="19" x1="5"></line></svg></span>
    </a>
<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            <th>عنوان الخبر باللغة العربية</th>
            <th>عنوان الخبر باللغة الانجليزية</th>
            <th>الجهة</th>
            <th>التاريخ</th>
            <th>التفعيل</th>
            <th>الصور</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var news in Model)
        {
            <tr>
                <td>@news.TitleAr</td>
                <td>@news.TitleEn</td>
                <td>@news.TrainigSector?.NameAr</td>
                <td>@news.UserCreationDate?.ToString("yyyy-MM-dd")</td>
                <td>
                    @if (news.IsActive)
                    {
                        <i class="fa-solid fa-toggle-on"> </i>
                    }
                    else
                    {
                        <span class="badge bg-danger">غير مفعل</span>
                    }
                </td>
                <td>
             @* 
                    @foreach(var item in news.NewsImages)
                    {
                   
                        <img src="/Files/@item.ImagePath" alt="News Image" style="width: 60px; height: 60px; object-fit: cover; margin: 2px;" />
                        
                    } *@

                        <a asp-action="Edit" asp-route-id="@news.Id" class="buttoneimg right-4tens ">
                            <span class="buttoneimg__text">إضافة صورة</span>
                            <span class="buttoneimg__icon">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" viewBox="0 0 24 24" stroke-width="2" stroke-linejoin="round" stroke-linecap="round" stroke="currentColor" height="24" fill="none" class="svg"><line y2="19" y1="5" x2="12" x1="12"></line><line y2="12" y1="12" x2="19" x1="5"></line></svg></span>
                        </a>

                </td>
           
           
           
           
                <td>
                    <a  asp-action="Edit" asp-route-id="@news.Id" class="buttonedit right-4tens ">
                        <span class="buttonedit__text">تعديل</span>
                        <span class="buttonedit__icon"> <i class="fas fa-edit"></i></span>
                    </a>

                        <a href="javascript:void(0);" class="buttonremove right-4tens ">
                        <span class="buttonremove__text"> حذف</span>
                        <span class="buttonremove__icon"> <i class="fa-solid fa-x"></i></span>
                    </a>

                </td>

            
            </tr>
        }
    </tbody>
</table>

</div>

<script>
    function confirmDelete(id) {
        Swal.fire({
            title: 'هل أنت متأكد؟',
            text: "لن تتمكن من التراجع عن هذا!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#dc3545', // red
            cancelButtonColor: '#6c757d', // grey
            confirmButtonText: 'نعم، احذف!',
            cancelButtonText: 'إلغاء'
        }).then((result) => {
            if (result.isConfirmed) {
                // Navigate to Delete action
                window.location.href = '/News/Delete/' + id;
            }
        });
    }
</script>
