@model IEnumerable<TrainigSectorDataEntry.ViewModel.NewsVM>

@{
    ViewData["Title"] = "الأخبار";
}

<h2 class="text-center" style="margin-bottom: 80px;">الأخبار</h2>

<a asp-action="Create" class="btn btn-success mb-3">إضافة خبر</a>

<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            <th>عنوان الخبر باللغة العربية</th>
            <th>عنوان الخبر باللغة الانجليزية</th>
            <th>الجهة</th>
            <th>التاريخ</th>
            <th>التفعيل</th>
            <th>الصور</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var news in Model)
        {
            <tr>
                <td>@news.TitleAr</td>
                <td>@news.TitleEn</td>
                <td>@news.TrainigSector?.NameAr</td>
                <td>@news.UserCreationDate?.ToString("yyyy-MM-dd")</td>
                <td>
                    @if (news.IsActive)
                    {
                        <span class="badge bg-success">مفعل</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">غير مفعل</span>
                    }
                </td>
                <td>
             
                    @foreach(var item in news.NewsImages)
                    {
                   
                        <img src="/Files/@item.ImagePath" alt="News Image" style="width: 60px; height: 60px; object-fit: cover; margin: 2px;" />
                        
                    }
                    

                    <a asp-action="AddImages" asp-route-id="@news.Id" class="btn btn-sm btn-primary mt-1">إضافة صورة</a>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@news.Id" class="btn btn-sm btn-warning">تعديل</a>
                 
                    <a asp-action="Delete" asp-route-id="@news.Id" class="btn btn-sm btn-danger">حذف</a>
                </td>
            </tr>
        }
    </tbody>
</table>
