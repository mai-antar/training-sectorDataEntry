@model TrainigSectorDataEntry.ViewModel.NewsVM

@{
    ViewData["Title"] = "إضافة خبر";
}

<h2>إضافة خبر</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <br />
    <div class="form-group">
        <label asp-for="TrainigSectorId" class="control-label">اسم الجهة</label>
        <select asp-for="TrainigSectorId" asp-items="ViewBag.TrainingSectorList" class="form-control">
            <option value="">-- اختر الجهة --</option>
        </select>
        <span asp-validation-for="TrainigSectorId" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="TitleAr" class="control-label">عنوان الخبر بالعربي</label>
        <input asp-for="TitleAr" class="form-control" />
        <span asp-validation-for="TitleAr" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="TitleEn" class="control-label">عنوان الخبر بالانجليزي</label>
        <input asp-for="TitleEn" class="form-control" />
        <span asp-validation-for="TitleEn" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="ShortDescriptionAr" class="control-label">الخبر بالعربي</label>
        <input asp-for="ShortDescriptionAr" class="form-control" />
        <span asp-validation-for="ShortDescriptionAr" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="ShortDescriptionEn" class="control-label">الخبر بالانجليزي</label>
        <input asp-for="ShortDescriptionEn" class="form-control" />
        <span asp-validation-for="ShortDescriptionEn" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="DescriptionAr" class="control-label">تفاصيل الخبر بالعربي</label>
        <textarea asp-for="DescriptionAr" class="form-control my-textarea"></textarea>
        <span asp-validation-for="DescriptionAr" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="DescriptionEn" class="control-label">تفاصيل الخبر بالانجليزي</label>
        <textarea asp-for="DescriptionEn" class="form-control my-textarea"></textarea>
        <span asp-validation-for="DescriptionEn" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        <label for="UploadedImages">تحميل الصور</label>
        <input asp-for="UploadedImages" type="file" multiple class="form-control" />
        <span asp-validation-for="UploadedImages" class="text-danger"></span>
    </div>
    <br />

    <button type="submit" class="btn btn-primary">إضافة</button>
    <a asp-action="Index" class="btn btn-secondary">إلغاء</a>
</form>
<div class="card mt-5">
    <div class="card-header">
        <strong class="text-center" style="margin-bottom: 80px;">الأخبار</strong>
    </div>
    <div class="card-body">
        <h3>الأخبار</h3>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>عنوان الخبر بالعربي</th>
                    <th>عنوان الخبر بالانجليزي</th>
                    <th>الجهة</th>
                    <th>التاريخ</th>
                    <th>التفعيل</th>
                    <th>الصور</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var news in (List<TrainigSectorDataEntry.ViewModel.NewsVM>)ViewBag.ExistingNews)
                {
                    <tr>
                        <td>@news.TitleAr</td>
                        <td>@news.TitleEn</td>
                        <td>@news.TrainigSector?.NameAr</td>
                        <td>@news.UserCreationDate?.ToString("yyyy-MM-dd")</td>
                        <td>
                            @if (news.IsActive)
                            {
                                <span class="badge bg-success">مفعل</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">غير مفعل</span>
                            }
                        </td>
                        <td>
                            @foreach (var item in news.NewsImages)
                            {
                                <img src="@("/Storage/" + item.ImagePath)" alt="News Image" style="width: 60px; height: 60px; object-fit: cover; margin: 2px;" />
                                

                            }

                            <a asp-action="AddImages" asp-route-id="@news.Id" class="btn btn-sm btn-primary mt-1">إضافة صورة</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
