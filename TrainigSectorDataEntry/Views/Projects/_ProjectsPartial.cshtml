@model List<TrainigSectorDataEntry.ViewModel.ProjectVM>


@foreach (var Project in Model)
{
    <tr>
        <td>@Project.TitleAr</td>
        <td>@Project.TitleEn</td>
        <td>@Project.EducationalFacilities?.NameAr</td>
@*         <td>@Project.UserCreationDate?.ToString("yyyy-MM-dd")</td> *@
        <td>
            @if (Project.IsActive)
            {
                <span class="badge bg-success">مفعل</span>
            }
            else
            {
                <span class="badge bg-danger">غير مفعل</span>
            }
        </td>
        <td>
            @foreach (var item in Project.Images)
            {
                <img src="/Files/@item.ImagePath" alt="Project Image" style="width: 60px; height: 60px; object-fit: cover; margin: 2px;" />

            }

            <a href="javascript:void(0)"
               class="buttoneimg right-4tens"
               onclick="openImageUpload(@Project.Id)">
                <span class="buttoneimg__text">إضافة صورة</span>
                <span class="buttoneimg__icon">+</span>
            </a>
        
        </td>
        <td>
          

            <a class="buttonedit right-4tens " asp-action="Edit" asp-route-id="@Project.Id">
                <span class="buttonedit__text">تعديل</span>
                <span class="buttonedit__icon"> <i class="fas fa-edit"></i></span>
            </a>
            <a href="javascript:void(0);" class="buttonremove right-4tens "
               onclick="confirmDelete(@Project.Id)">
                <span class="buttonremove__text"> حذف</span>
                <span class="buttonremove__icon"> <i class="fa-solid fa-x"></i></span>
            </a>
        </td>
    </tr>
}
<script>
    function confirmDelete(id) {
        Swal.fire({
            title: 'هل أنت متأكد؟',
            text: "لن تتمكن من التراجع عن هذا!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#dc3545', // red
            cancelButtonColor: '#6c757d', // grey
            confirmButtonText: 'نعم، احذف!',
            cancelButtonText: 'إلغاء'
        }).then((result) => {
            if (result.isConfirmed) {
                // Navigate to Delete action
                window.location.href = '/Projects/Delete/' + id;
            }
        });
    }
</script>
     

