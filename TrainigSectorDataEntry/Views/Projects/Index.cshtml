@model IEnumerable<TrainigSectorDataEntry.ViewModel.ProjectVM>

@{
    ViewData["Title"] = "المشاريع";
}

<h2 class="text-center" style="margin-bottom: 80px;">المشاريع</h2>

<a asp-action="Create" class="btn btn-success mb-3">إضافة مشروع</a>

<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            <th>العنوان باللغة العربية</th>
            <th>العنوان باللغة الانجليزية</th>
            <th>المنشأت التعليمية</th>
            <th>التاريخ</th>
            <th>التفعيل</th>
            <th>الصور</th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var project in Model)
        {
            <tr>
                <td>@project.TitleAr</td>
                <td>@project.TitleEn</td>
                <td>@project.EducationalFacilities?.NameAr</td>
                <td>@project.Date.ToString("yyyy-MM-dd")</td>
                <td>
                    @if (project.IsActive)
                    {
                        <span class="badge bg-success">مفعل</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">غير مفعل</span>
                    }
                </td>
                <td>

                    @foreach (var item in project.ProjectImages)
                    {
                        <img src="@item.ImagePath" alt="Project Image" style="width: 60px; height: 60px; object-fit: cover; margin: 2px;" />

                    }


                    <a asp-action="AddImages" asp-route-id="@project.Id" class="btn btn-sm btn-primary mt-1">إضافة صورة</a>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@project.Id" class="btn btn-sm btn-warning">تعديل</a>

                    <a asp-action="Delete" asp-route-id="@project.Id" class="btn btn-sm btn-danger">حذف</a>
                </td>
            </tr>
        }
    </tbody>
</table>
