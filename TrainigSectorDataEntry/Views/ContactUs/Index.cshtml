@model IEnumerable<TrainigSectorDataEntry.ViewModel.ContactUVM>

@{
    ViewData["Title"] = "تواصل معنا";
}

<h2 class="text-center" style="margin-bottom: 80px;">تواصل معنا</h2>

<a asp-action="Create" class="btn btn-success mb-3">إضافة لتواصل معنا</a>

<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            <th>اسم الجهة</th>
            <th>العنوان</th>
            <th>التليفون</th>
            <th>الفاكس</th>
            <th>البريد الالكتروني</th>
            <th>التفعيل</th>



            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var contact in Model)
        {
            <tr>
                <td>@contact.TrainigSector?.NameAr</td>
                <td>@contact.Address</td>
                <td>@contact.Telephone</td>
                <td>@contact.Fax</td>
                <td>@contact.Email</td>
                <td>
                    @if (contact.IsActive)
                    {
                        <span class="badge bg-success">مفعل</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">غير مفعل</span>
                    }
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@contact.Id" class="btn btn-sm btn-warning">تعديل</a>

                    <a asp-action="Delete" asp-route-id="@contact.Id" class="btn btn-sm btn-danger">حذف</a>
                </td>
            </tr>
        }
    </tbody>
</table>
