                    <h5 class="modal-title">إضافة صور</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <input type="hidden" name="EntityType" value=1 />
                    <input type="hidden" name="EntityId" id="entityIdInput" />

                    <input type="file" name="UploadedImages" multiple class="form-control" />
                </div>

                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">حفظ</button>
                </div>

            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function() {
            $('#EducationalFacilitiesId').change(function() {
                var facilityId = $(this).val();
                if (facilityId) {
                    $.ajax({
                        url: '@Url.Action("GetHistoryBreifByFacility", "HistoryBreif")',
                        type: 'GET',
                        data: { facilityId: facilityId },
                        success: function(data) {
                            $('#historyBreifTable tbody').html(data);
                        }
                    });
                } else {
                    $('#historyBreifTable tbody').html('');
                }
            });
        });
                      function openImageUpload(historyBreif) {
            document.getElementById("entityIdInput").value = historyBreif;
            var modal = new bootstrap.Modal(document.getElementById('uploadImageModal'));
            modal.show();
        }
    </script>
}
