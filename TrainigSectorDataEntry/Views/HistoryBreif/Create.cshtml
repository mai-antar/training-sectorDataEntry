@model TrainigSectorDataEntry.ViewModel.HistoryBreifVM

@{
    ViewData["Title"] = "النبذة التاريخية";
}

<h2>إضافة نبذة تاريخية</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <br />
    <div class="form-group">
        <label asp-for="EducationalFacilitiesId" class="control-label">اسم المنشأة التعليمية</label>
        <select asp-for="EducationalFacilitiesId" asp-items="ViewBag.educationalFacilityList" class="form-control">
            <option value="">-- اختر منشأة تعليمية --</option>
        </select>
        <span asp-validation-for="EducationalFacilitiesId" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="NameAr" class="control-label">الاسم باللغة العربية</label>
        <input asp-for="NameAr" class="form-control" />
        <span asp-validation-for="NameAr" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="NameEn" class="control-label">الاسم باللغة الانجليزي</label>
        <input asp-for="NameEn" class="form-control" />
        <span asp-validation-for="NameEn" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="TitleAr" class="control-label">عنوان النبذة التاريخية باللغة العربية</label>
        <input asp-for="TitleAr" class="form-control" />
        <span asp-validation-for="TitleAr" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="TitleEn" class="control-label">عنوان النبذة التاريخية باللغة الانجليزية</label>
        <input asp-for="TitleEn" class="form-control" />
        <span asp-validation-for="TitleEn" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="DescriptionAr" class="control-label">تفاصيل النبذة التاريخية باللغة العربية</label>
        <textarea asp-for="DescriptionAr" class="form-control my-textarea"></textarea>
        <span asp-validation-for="DescriptionAr" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="DescriptionEn" class="control-label">تفاصيل النبذة التاريخية باللغة الانجليزية</label>
        <textarea asp-for="DescriptionEn" class="form-control my-textarea"></textarea>
        <span asp-validation-for="DescriptionEn" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        <label for="UploadedImages">تحميل الصور</label>
        <input asp-for="UploadedImages" type="file" multiple class="form-control" />
        <span asp-validation-for="UploadedImages" class="text-danger"></span>
    </div>

    <br />

    <button type="submit" class="btn btn-primary">إضافة</button>
    <a asp-action="Index" class="btn btn-secondary">إلغاء</a>
</form>
<div class="card mt-5">
    <div class="card-header">
        <strong class="text-center" style="margin-bottom: 80px;">نبذة تاريخية</strong>
    </div>
    <div class="card-body">
        <h3>نبذة تاريخية</h3>

        <table class="table table-bordered table-striped" id="historyBreifTable">
            <thead>
                <tr>
                    <th>الاسم باللغة العربية</th>
                    <th>الاسم باللغة الانجليزية</th>
                    <th>المنشأت التعليمية</th>
                    <th>التاريخ</th>
                    <th>التفعيل</th>
                    <th>الصور</th>
                </tr>
            </thead>
            <tbody>
                @Html.Partial("_HistoryBreifPartial", (List<TrainigSectorDataEntry.ViewModel.HistoryBreifVM>)ViewBag.ExistingHistoryBreif)
                     
            </tbody>
        </table>

    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function() {
            $('#EducationalFacilitiesId').change(function() {
                var facilityId = $(this).val();
                if (facilityId) {
                    $.ajax({
                        url: '@Url.Action("GetHistoryBreifByFacility", "HistoryBreif")',
                        type: 'GET',
                        data: { facilityId: facilityId },
                        success: function(data) {
                            $('#historyBreifTable tbody').html(data);
                        }
                    });
                } else {
                    $('#historyBreifTable tbody').html('');
                }
            });
        });
    </script>
}
