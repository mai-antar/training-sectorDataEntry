<div class="modal fade" id="uploadImageModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-controller="EntityImage"
                  asp-action="Upload"
                  method="post"
                  enctype="multipart/form-data">

