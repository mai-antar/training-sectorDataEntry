@model IEnumerable<TrainigSectorDataEntry.ViewModel.HistoryBreifVM>

@{
    ViewData["Title"] = "النبذة التاريخية";
}
<div class="container-fluid">
    <div class="contPage">


        <div class="orang">
            <h3>النبذة التاريخية </h3>
            <div></div>
        </div>


    </div>
    <a asp-action="Create" class="button right-4tens ">
        <span class="button__text"> إضافة نبذة تاريخية</span>
        <span class="button__icon"><svg xmlns="http://www.w3.org/2000/svg" width="24" viewBox="0 0 24 24" stroke-width="2" stroke-linejoin="round" stroke-linecap="round" stroke="currentColor" height="24" fill="none" class="svg"><line y2="19" y1="5" x2="12" x1="12"></line><line y2="12" y1="12" x2="19" x1="5"></line></svg></span>
    </a>


<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            <th>الاسم باللغة العربية</th>
            <th>الاسم باللغة الانجليزية</th>
            <th>المنشأت التعليمية</th>
            <th>التاريخ</th>
            <th>التفعيل</th>
            <th>الصور</th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var historyBreif in Model)
        {
            <tr>
                <td>@historyBreif.NameAr</td>
                <td>@historyBreif.NameEn</td>
                <td>@historyBreif.EducationalFacilities?.NameAr</td>
                <td>@historyBreif.UserCreationDate?.ToString("yyyy-MM-dd")</td>
                <td>
                    @if (historyBreif.IsActive)
                    {
                        <span class="badge bg-success">مفعل</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">غير مفعل</span>
                    }
                </td>
                <td>

                    @foreach (var item in historyBreif.HistoryBerifImages)
                    {
                        @* <img src="/Files/@item.ImagePath" style="width:60px;height:60px;object-fit:cover" />
                        *@ @* <img src="@("/Storage/" + item.ImagePath)" alt="News Image" style="width: 60px; height: 60px; object-fit: cover; margin: 2px;" /> *@

                    }


                        <a asp-action="AddImages" asp-route-id="@historyBreif.Id"  class="buttoneimg right-4tens ">

                            <span class="buttoneimg__text">إضافة صورة</span>
                            <span class="buttoneimg__icon"> <svg xmlns="http://www.w3.org/2000/svg" width="24" viewBox="0 0 24 24" stroke-width="2" stroke-linejoin="round" stroke-linecap="round" stroke="currentColor" height="24" fill="none" class="svg"><line y2="19" y1="5" x2="12" x1="12"></line><line y2="12" y1="12" x2="19" x1="5"></line></svg></span>

                        </a>
                </td>
                <td>
                        <a asp-action="Edit" asp-route-id="@historyBreif.Id" class="buttonedit right-4tens ">
                            <span class="buttonedit__text">تعديل</span>
                            <span class="buttonedit__icon"> <i class="fas fa-edit"></i></span>
                        </a>

                        <a asp-action="Delete" asp-route-id="@historyBreif.Id" class="buttonremove right-4tens ">
                            <span class="buttonremove__text"> حذف</span>
                            <span class="buttonremove__icon"> <i class="fa-solid fa-x"></i></span>
                        </a>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>