@model IEnumerable<TrainigSectorDataEntry.ViewModel.HistoryBreifVM>

@{
    ViewData["Title"] = "النبذة التاريخية";
}

<h2 class="text-center" style="margin-bottom: 80px;">النبذة التاريخية</h2>

<a asp-action="Create" class="btn btn-success mb-3">إضافة نبذة تاريخية</a>

<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            <th>الاسم باللغة العربية</th>
            <th>الاسم باللغة الانجليزية</th>
            <th>المنشأت التعليمية</th>
            <th>التاريخ</th>
            <th>التفعيل</th>
            <th>الصور</th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var historyBreif in Model)
        {
            <tr>
                <td>@historyBreif.NameAr</td>
                <td>@historyBreif.NameEn</td>
                <td>@historyBreif.EducationalFacilities?.NameAr</td>
                <td>@historyBreif.UserCreationDate?.ToString("yyyy-MM-dd")</td>
                <td>
                    @if (historyBreif.IsActive)
                    {
                        <span class="badge bg-success">مفعل</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">غير مفعل</span>
                    }
                </td>
                <td>

                    @foreach (var item in historyBreif.HistoryBerifImages)
                    {
                        <img src="/Files/@item.ImagePath" style="width:60px;height:60px;object-fit:cover" />
                        @* <img src="@("/Storage/" + item.ImagePath)" alt="News Image" style="width: 60px; height: 60px; object-fit: cover; margin: 2px;" /> *@

                    }


                    <a asp-action="AddImages" asp-route-id="@historyBreif.Id" class="btn btn-sm btn-primary mt-1">إضافة صورة</a>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@historyBreif.Id" class="btn btn-sm btn-warning">تعديل</a>

                    <a asp-action="Delete" asp-route-id="@historyBreif.Id" class="btn btn-sm btn-danger">حذف</a>
                </td>
            </tr>
        }
    </tbody>
</table>
