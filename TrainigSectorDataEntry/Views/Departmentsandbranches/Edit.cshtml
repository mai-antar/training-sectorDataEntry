@model TrainigSectorDataEntry.ViewModel.DepartmentsandbranchVM

@{
    ViewData["Title"] = "تعديل الاقسام";
}

<h2 class="text-center" style="margin-bottom: 80px;">تعديل الاقسام</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <br />
    <div class="form-group">
        <input type="hidden" id="CurrentFacilityId" value="@Model.EducationalFacilitiesId" />

        <label asp-for="EducationalFacilitiesId" class="control-label">اسم المنشأة التعليمي</label>
        <select asp-for="EducationalFacilitiesId" asp-items="ViewBag.EducationalFacilityList" class="form-control">
            <option value="">-- اختر المنشأة التعليمية --</option>
        </select>
        <span asp-validation-for="EducationalFacilitiesId" class="text-danger"></span>
    </div>
