@model IEnumerable<TrainigSectorDataEntry.ViewModel.DepartmentsandbranchVM>

@{
    ViewData["Title"] = "الاقسام";
}

<div class="contPage">


    <div class="orang2">
        <h3> الاقسام   </h3>
        <div></div>
    </div>


</div>



<a asp-action="Create" class="button right-4tens ">
    <span class="button__text">إضافة قسم</span>
    <span class="button__icon"><svg xmlns="http://www.w3.org/2000/svg" width="24" viewBox="0 0 24 24" stroke-width="2" stroke-linejoin="round" stroke-linecap="round" stroke="currentColor" height="24" fill="none" class="svg"><line y2="19" y1="5" x2="12" x1="12"></line><line y2="12" y1="12" x2="19" x1="5"></line></svg></span>

</a>


<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            <th>الاسم باللغة العربية</th>
            <th>الاسم باللغة الانجليزية</th>
             <th>اسم المنشأة التعليمية</th>
             @* <th>التخصص</th> *@
             <th>نوع القسم</th>
            <th>التفعيل</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var departmentType in Model)
        {
            <tr>
                <td>@departmentType.NameAr</td>
                <td>@departmentType.NameEn</td>
                 <td>@departmentType.EducationalFacilities?.NameAr</td>
                @*<td>@departmentType.Specialization?.NameAr</td> *@
                 <td>@departmentType.DepatmentType?.NameAr</td>
                <td>
                    @if (departmentType.IsActive)
                    {
                        <span class="badge bg-success">مفعل</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">غير مفعل</span>
                    }
                </td>

                <td>
                    <a asp-controller="DepartmentsandBranchesImages" asp-action="Index" asp-route-departmentId="@departmentType.Id"
                        class="btn btn-sm btn-info">التفاصيل / الصور</a>

                    

                    <a asp-action="Edit" asp-route-id="@departmentType.Id" class="buttonedit right-4tens ">
                        <span class="buttonedit__text">تعديل</span>
                        <span class="buttonedit__icon"> <i class="fas fa-edit"></i></span>
                    </a>





                    

                    <a asp-action="Delete" asp-route-id="@departmentType.Id" class="buttonremove right-4tens " >
                        <span class="buttonremove__text"> حذف</span>
                        <span class="buttonremove__icon"> <i class="fa-solid fa-x"></i></span>
                    </a>

                </td>
            </tr>
        }
    </tbody>
</table>


