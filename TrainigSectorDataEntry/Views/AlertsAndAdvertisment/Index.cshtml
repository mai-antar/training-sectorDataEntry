@model IEnumerable<TrainigSectorDataEntry.ViewModel.AlertsAndAdvertismentVM>

@{
    ViewData["Title"] = "اعلانات وتنبيهات";
}

<div class="container-fluid">
    <div class="contPage">


        <div class="orang2">
            <h3>اعلانات وتنبيهات </h3>
            <div></div>
        </div>


    </div>

    <a asp-action="Create" class="button right-4tens ">
        <span class="button__text">  إضافة اعلانات وتنبيهات</span>
        <span class="button__icon"><svg xmlns="http://www.w3.org/2000/svg" width="24" viewBox="0 0 24 24" stroke-width="2" stroke-linejoin="round" stroke-linecap="round" stroke="currentColor" height="24" fill="none" class="svg"><line y2="19" y1="5" x2="12" x1="12"></line><line y2="12" y1="12" x2="19" x1="5"></line></svg></span>

       </a>

<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            
            <th>التفاصيل باللغة العربية</th>
            <th>التفاصيل باللغة الانجليزية</th>
            <th>المنشأت التعليمية</th>
            <th>التفعيل</th>
            <th>الصورة</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var alertsAndAdvertisment in Model)
        {
            <tr>

                <td>@alertsAndAdvertisment.DescriptionAr</td>
                <td>@alertsAndAdvertisment.DescriptionEn</td>
                <td>@alertsAndAdvertisment.EducationalFacilities?.NameAr</td>
                <td>
                    @if (alertsAndAdvertisment.IsActive)
                    {
                        <span class="badge bg-success">مفعل</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">غير مفعل</span>
                    }
                </td>
                <td>
                    <img src="/Files/@alertsAndAdvertisment.ImagePath"
                         style="width:60px;height:60px;object-fit:cover" />
                   
                   @*  <img src="@("/Storage/" + alertsAndAdvertisment.ImagePath)" alt="Project Image" style="width: 60px; height: 60px; object-fit: cover; margin: 2px;" /> *@
                </td>
                <td>
                        <a asp-action="Edit" asp-route-id="@alertsAndAdvertisment.Id" class="buttonedit right-4tens ">
                            <span class="buttonedit__text">تعديل</span>
                            <span class="buttonedit__icon"> <i class="fas fa-edit"></i></span>
                        </a>

                        <a href="javascript:void(0);" class="buttonremove right-4tens "
                           onclick="confirmDelete(@alertsAndAdvertisment.Id)">
                            <span class="buttonremove__text"> حذف</span>
                            <span class="buttonremove__icon"> <i class="fa-solid fa-x"></i></span>
                        </a>
                </td>
            </tr>
        }
    </tbody>
</table>
<script>
    function confirmDelete(id) {
        Swal.fire({
            title: 'هل أنت متأكد؟',
            text: "لن تتمكن من التراجع عن هذا!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#dc3545', // red
            cancelButtonColor: '#6c757d', // grey
            confirmButtonText: 'نعم، احذف!',
            cancelButtonText: 'إلغاء'
        }).then((result) => {
            if (result.isConfirmed) {
                // Navigate to Delete action
                window.location.href = '/AlertsAndAdvertisment/Delete/' + id;
            }
        });
    }
</script>