@model TrainigSectorDataEntry.ViewModel.AlertsAndAdvertismentVM

@{
    ViewData["Title"] = "اعلانات وتنبيهات";
}
<style>
    #alertsTable {
        table-layout: fixed;
        width: 100%;
    }
</style>



<h2>إضافة اعلانات وتنبيهات</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <br />
    <div class="form-group">
        <label asp-for="EducationalFacilitiesId" class="control-label">اسم المنشأة التعليمية</label>
        <select asp-for="EducationalFacilitiesId" asp-items="ViewBag.educationalFacilityList" class="form-control">
            <option value="">-- اختر منشأة تعليمية --</option>
        </select>
        <span asp-validation-for="EducationalFacilitiesId" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="DescriptionAr" class="control-label">التفاصيل باللغة العربية</label>
        <textarea asp-for="DescriptionAr" class="form-control my-textarea"></textarea>
        <span asp-validation-for="DescriptionAr" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="DescriptionEn" class="control-label">التفاصيل باللغة الانجليزية</label>
        <textarea asp-for="DescriptionEn" class="form-control my-textarea" ></textarea>
        <span asp-validation-for="DescriptionEn" class="text-danger"></span>
    </div>
    <br />


    <div class="form-group">
        <label for="UploadedImage">تحميل الصورة</label>
        <input asp-for="UploadedImage" type="file" class="form-control" />
        <span asp-validation-for="UploadedImage" class="text-danger"></span>
    </div>

    <br />

    <button type="submit" class="btn btn-primary">إضافة</button>
    <a asp-action="Index" class="btn btn-secondary">إلغاء</a>
</form>
<div class="card mt-5">
    <div class="card-header">
        <strong class="text-center" style="margin-bottom: 80px;">اعلانات وتنبيهات</strong>
    </div>
    <div class="card-body">
        <h3>اعلانات وتنبيهات</h3>

        <table class="table table-bordered table-striped" id="alertsTable">
            <thead>
                <tr>
                  
                    <th>التفاصيل باللغة العربية</th>
                    <th>التفاصيل باللغة الانجليزية</th>
                    <th>المنشأت التعليمية</th>
                    <th>التفعيل</th>
                    <th>الصورة</th>
                </tr>
            </thead>
            <tbody>
                @Html.Partial("_AlertsAndAdvertismentPartial", (List<TrainigSectorDataEntry.ViewModel.AlertsAndAdvertismentVM>)ViewBag.existingAlertsAndAdvertisment)

            </tbody>
        </table>

    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function() {
            $('#EducationalFacilitiesId').change(function() {
                var facilityId = $(this).val();
                if (facilityId) {
                    $.ajax({
                        url: '@Url.Action("GetAlertsByFacility", "AlertsAndAdvertisment")',
                        type: 'GET',
                        data: { facilityId: facilityId },
                        success: function(data) {
                            $('#alertsTable tbody').html(data);
                        }
                    });
                } else {
                    $('#alertsTable tbody').html(''); 
                }
            });
        });
    </script>
}
