@model TrainigSectorDataEntry.ViewModel.StudentTablesAttachmentVM

@{
    ViewData["Title"] = "تعديل جدول الطلاب";
}


<div class="container-fluid">
    <div class="contPage">


        <div class="orang2">
            <h3>تعديل جدول الطلاب </h3>
            <div></div>
        </div>


    </div>
<br />
<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
        <input type="hidden" id="CurrentLevelId" value="@Model.EducationalLevelId" />
        <input type="hidden" id="CurrentDepartmentId" value="@Model.DepartmentsandbranchesId" />
        <input type="hidden" id="CurrentSpecializationId" value="@Model.SpecializationId" />


    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <br />
        <div class="row">
            <div class="col-md-6">
                <!-- Table Type  -->
                <div class="form-group">
                    <label asp-for="TableTypeId" class="control-label">نوع الجدول</label>
                    <select asp-for="TableTypeId" asp-items="ViewBag.TableTypeList" class="form-control">
                        <option value="">-- اختر نوع الجدول --</option>
                    </select>
                    <span asp-validation-for="TableTypeId" class="text-danger"></span>
                </div>

            </div>
            <div class="col-md-6">
                <!-- Educational Facility -->
                <div class="form-group">
                    <label asp-for="EducationalFacilitiesId" class="control-label"> المنشأة التعليمية</label>
                    <select asp-for="EducationalFacilitiesId" asp-items="ViewBag.EducationalFacilityList" id="EducationalFacilitiesId" class="form-control">
                        <option value="">-- اختر منشأة تعليمية --</option>
                    </select>
                    <span asp-validation-for="EducationalFacilitiesId" class="text-danger"></span>
                </div>
            </div>

        </div>
        <div class="row">
            <div class="col-md-6">
                <!-- Educational Level -->
                <div class="form-group">
                    <label asp-for="EducationalLevelId" class="control-label"> السنة الدراسية</label>
                    <select asp-for="EducationalLevelId" id="EducationalLevelId" class="form-control">
                        <option value="">-- اختر سنة دراسية  --</option>
                    </select>
                    <span asp-validation-for="EducationalLevelId" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">


                <!-- Term  -->
                <div class="form-group">
                    <label asp-for="TermsId" class="control-label"> الفصل الدراسي</label>
                    <select asp-for="TermsId" asp-items="ViewBag.TermList" class="form-control">
                        <option value="">-- اختر الفصل الدراسي --</option>
                    </select>
                    <span asp-validation-for="TermsId" class="text-danger"></span>
                </div>

            </div>

        </div>
        <div class="row">
            <div class="col-md-6">
                <!-- Departments and branches -->
                <div class="form-group">


                    <label asp-for="DepartmentsandbranchesId" class="control-label"> القسم</label>
                    <select asp-for="DepartmentsandbranchesId" id="DepartmentsandbranchesId" class="form-control">
                        <option value="">-- اختر القسم --</option>
                    </select>
                    <span asp-validation-for="DepartmentsandbranchesId" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <!-- Specialization  -->
                <div class="form-group">
                    <label asp-for="SpecializationId" class="control-label"> التخصص</label>
                    <select asp-for="SpecializationId" id="SpecializationId" class="form-control">
                        <option value="">-- اختر التخصص --</option>
                    </select>
                    <span asp-validation-for="SpecializationId" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <!-- Existing File Preview -->
                @if (!string.IsNullOrEmpty(Model.FilePath))
                {
                    <div class="form-group">
                        <label>الملف الحالي:</label><br />
                        <a asp-controller="Files" asp-action="Download" asp-route-filePath="@Model.FilePath">
                            تحميل الملف الحالي
                        </a>
                    </div>
                }
            </div>
            <div class="col-md-6">
                <!-- File Upload -->
                <div class="form-group">
                    <label for="UploadedFile">تحديث الملف (اختياري)</label>
                    <input asp-for="UploadedFile" type="file" class="form-control" />
                    <span asp-validation-for="UploadedFile" class="text-danger"></span>
                </div>
            </div>
            
        </div>
    <div class="row">
        <div class="col-md-6">
       
        <div class="col-md-6">
            <!-- IsActive -->
            <div class="form-group">
                <label asp-for="IsActive" class="control-label">مفعل؟</label>
                <input asp-for="IsActive" type="checkbox" class="form-check-input" />
            </div>
        </div>
    </div>
   

   
    <br />
    <div class="row">

        <div class="col-md-6">

            <button type="submit" class="button right-4tens float-left">
                <span class="button__text"> حفظ </span>
                <span class="button__icon">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="svg save-icon">

                        <path d="M19 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11l5 5v11a2 2 0 0 1-2 2z"></path>
                        <polyline points="17 21 17 13 7 13 7 21"></polyline>
                        <polyline points="7 3 7 8 15 8"></polyline>

                    </svg>
                </span>
            </button>


        </div>
        <div class="col-md-6">

            <a class="buttonremove right-4tens float-right" style="border: 1px solid #333333;background-color: #333333;" asp-action="Index">

                <span class="buttonremove__text"> إلغاء</span>
                <span class="buttonremove__icon" style="background-color: #333333;"> <i class="fa-solid fa-x"></i></span>
            </a>

        </div>

    </div>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

        <script>
            $(document).ready(function () {

                var currentLevelId = $('#CurrentLevelId').val();
                var currentDepartmentId = $('#CurrentDepartmentId').val();
                var currentSpecializationId = $('#CurrentSpecializationId').val();

                //  Facility → Levels
                $('#EducationalFacilitiesId').change(function () {
                    var facilityId = $(this).val();

                    $('#EducationalLevelId').empty().append('<option value="">-- اختر سنة دراسية --</option>');
                    $('#DepartmentsandbranchesId').empty().append('<option value="">-- اختر القسم --</option>');
                    $('#SpecializationId').empty().append('<option value="">-- اختر التخصص --</option>');

                    if (!facilityId) return;

                    $.get('/StudentTablesAttachment/GetLevelsByFacilityId',
                        { facilityId: facilityId },
                        function (data) {

                            $.each(data, function (i, item) {
                                $('#EducationalLevelId')
                                    .append(`<option value="${item.id}">${item.nameAr}</option>`);
                            });

                            //  Select saved level
                            if (currentLevelId) {
                                $('#EducationalLevelId').val(currentLevelId).trigger('change');
                            }
                        });
                });

                //  Facility → Departments
                $('#EducationalFacilitiesId').change(function () {
                    var facilityId = $(this).val();

                    $('#DepartmentsandbranchesId').empty().append('<option value="">-- اختر القسم --</option>');
                    $('#SpecializationId').empty().append('<option value="">-- اختر التخصص --</option>');

                    if (!facilityId) return;

                    $.get('/StudentTablesAttachment/GetDepartmentsByFacilityId',
                        { facilityId: facilityId },
                        function (data) {

                            $.each(data, function (i, item) {
                                $('#DepartmentsandbranchesId')
                                    .append(`<option value="${item.id}">${item.nameAr}</option>`);
                            });

                            // Select saved department
                            if (currentDepartmentId) {
                                $('#DepartmentsandbranchesId').val(currentDepartmentId).trigger('change');
                            }
                        });
                });

                //  Department → Specialization
                $('#DepartmentsandbranchesId').change(function () {
                    var departmentId = $(this).val();

                    $('#SpecializationId').empty().append('<option value="">-- اختر التخصص --</option>');

                    if (!departmentId) return;

                    $.get('/StudentTablesAttachment/GetSpecializationsByDepartmentId',
                        { departmentId: departmentId },
                        function (data) {

                            $.each(data, function (i, item) {
                                $('#SpecializationId')
                                    .append(`<option value="${item.id}">${item.nameAr}</option>`);
                            });

                            //  Select saved specialization
                            if (currentSpecializationId) {
                                $('#SpecializationId').val(currentSpecializationId);
                            }
                        });
                });

                
                $('#EducationalFacilitiesId').trigger('change');

            });
        </script>

}
</div>