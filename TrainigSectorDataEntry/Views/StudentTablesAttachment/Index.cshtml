@model IEnumerable<TrainigSectorDataEntry.ViewModel.StudentTablesAttachmentVM>

@{
    ViewData["Title"] = "جداول الطلاب";
}



<div class="container-fluid">
    <div class="contPage">


        <div class="orang2">
            <h3>جداول الطلاب </h3>
            <div></div>
        </div>


    </div>
<br />

    <a asp-action="Create" class="button right-4tens ">

        <span class="button__text"> إضافة جدول جديد</span>
        <span class="button__icon"><svg xmlns="http://www.w3.org/2000/svg" width="24" viewBox="0 0 24 24" stroke-width="2" stroke-linejoin="round" stroke-linecap="round" stroke="currentColor" height="24" fill="none" class="svg"><line y2="19" y1="5" x2="12" x1="12"></line><line y2="12" y1="12" x2="19" x1="5"></line></svg></span>

    </a>
<br />
<table class="table table-bordered">
        <thead class="thead-dark">
        <tr>
            
            <th> نوع الجدول</th>
            <th>المنشأة التعليمية</th>
            <th>السنة الدراسية</th>
            <th>الفصل الدراسي</th>
            <th>القسم</th>
            <th>التخصص</th>
            @* <th>حالي؟</th> *@
            <th>مفعل؟</th>
            <th>الملف</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                
                <td>@item.TableType?.NameAr</td>
                <td>@item.EducationalLevel.EducationalFacilities?.NameAr</td>
                <td>@item.EducationalLevel?.NameAr</td>
                <td>@item.Terms?.NameAr</td>
                <td>@item.Departmentsandbranches?.NameAr</td>
                <td>@item.Specialization?.NameAr</td>
           @*      <td>
                    @if (item.IsCurrent == true)
                    {
                        <span class="badge bg-success">نعم</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">لا</span>
                    }
                </td> *@
                <td>
                    @if (item.IsActive)
                    {
                        <span class="badge bg-success">مفعل</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">غير مفعل</span>
                    }
                </td>
                <td>
                    @if (!string.IsNullOrEmpty(item.FilePath))
                    {
                        <a href="/Files/@item.FilePath" target="_blank">تحميل</a>
                    }
                </td>
                <td>
                  


                        <a asp-action="Edit" asp-route-id="@item.Id" class="buttonedit right-4tens ">
                            <span class="buttonedit__text">تعديل</span>
                            <span class="buttonedit__icon"> <i class="fas fa-edit"></i></span>
                        </a>

                        <a href="javascript:void(0);" class="buttonremove right-4tens "
                           onclick="confirmDelete(@item.Id)">
                            <span class="buttonremove__text"> حذف</span>
                            <span class="buttonremove__icon"> <i class="fa-solid fa-x"></i></span>
                        </a>
                
                </td>
            </tr>
        }
    </tbody>
</table>
</div>
<script>
    function confirmDelete(id) {
        Swal.fire({
            title: 'هل أنت متأكد؟',
            text: "لن تتمكن من التراجع عن هذا!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#dc3545', // red
            cancelButtonColor: '#6c757d', // grey
            confirmButtonText: 'نعم، احذف!',
            cancelButtonText: 'إلغاء'
        }).then((result) => {
            if (result.isConfirmed) {
                // Navigate to Delete action
                window.location.href = '/StudentTablesAttachment/Delete/' + id;
            }
        });
    }
</script>