@model TrainigSectorDataEntry.ViewModel.StudentTablesAttachmentVM

@{
    ViewData["Title"] = "إضافة جدول الطلاب";
}


<div class="container-fluid">
    <div class="contPage">


        <div class="orang2">
            <h3>إضافة جدول الطلاب </h3>
            <div></div>
        </div>


    </div>
<br />
<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <br />
    <div class="row">
        <div class="col-md-6">
                <!-- Table Type  -->
                <div class="form-group">
                    <label asp-for="TableTypeId" class="control-label">نوع الجدول</label>
                    <select asp-for="TableTypeId" asp-items="ViewBag.TableTypeList" class="form-control">
                        <option value="">-- اختر نوع الجدول --</option>
                    </select>
                    <span asp-validation-for="TableTypeId" class="text-danger"></span>
                </div>
                <input type="hidden" id="CurrentDepartmentId" value="@Model.DepartmentsandbranchesId" />
                <input type="hidden" id="CurrentSpecializationId" value="@Model.SpecializationId" />
                <input type="hidden" id="CurrentEducationalLevelId" value="@Model.EducationalLevelId" />


        </div>
            <div class="col-md-6">
                <!-- Educational Facility -->
                <div class="form-group">
                    <label asp-for="EducationalFacilitiesId" class="control-label"> المنشأة التعليمية</label>
                    <select asp-for="EducationalFacilitiesId" asp-items="ViewBag.EducationalFacilityList" id="EducationalFacilitiesId" class="form-control">
                        <option value="">-- اختر منشأة تعليمية --</option>
                    </select>
                    <span asp-validation-for="EducationalFacilitiesId" class="text-danger"></span>
                </div>
            </div>

    </div>
        <div class="row">
            <div class="col-md-6">
                <!-- Educational Level -->
                <div class="form-group">
                    <label asp-for="EducationalLevelId" class="control-label"> السنة الدراسية</label>
                    <select asp-for="EducationalLevelId" asp-items="ViewBag.EducationalLevelList" id="EducationalLevelId" class="form-control">
                        <option value="">-- اختر سنة دراسية  --</option>
                    </select>
                    <span asp-validation-for="EducationalLevelId" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">


                <!-- Term  -->
                <div class="form-group">
                    <label asp-for="TermsId" class="control-label"> الفصل الدراسي</label>
                    <select asp-for="TermsId" asp-items="ViewBag.TermList" class="form-control">
                        <option value="">-- اختر الفصل الدراسي --</option>
                    </select>
                    <span asp-validation-for="TermsId" class="text-danger"></span>
                </div>
            
            </div>
          
        </div>
        <div class="row">
            <div class="col-md-6">
                <!-- Departments and branches -->
                <div class="form-group">


                    <label asp-for="DepartmentsandbranchesId" class="control-label"> القسم</label>
                    <select asp-for="DepartmentsandbranchesId" asp-items="ViewBag.departmentsandbranchList" id="DepartmentsandbranchesId" class="form-control">
                        <option value="">-- اختر القسم --</option>
                    </select>
                    <span asp-validation-for="DepartmentsandbranchesId" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6" id="specializationContainer" style="display:none;">
                <!-- Specialization  -->
            

                <div class="form-group">
                    <label asp-for="SpecializationId" class="control-label"> التخصص</label>
                    <select asp-for="SpecializationId" asp-items="ViewBag.SpecializationList" id="SpecializationId" class="form-control">
                        <option value="">-- اختر التخصص --</option>
                    </select>
                    <span asp-validation-for="SpecializationId" class="text-danger"></span>
                </div>
            </div>
        </div>
    <div class="row">

        <div class="col-md-6">
            <!-- IsActive -->
            <div class="form-group">
                <label asp-for="IsActive" class="control-label">مفعل؟</label>
                <input asp-for="IsActive" type="checkbox" class="form-check-input" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <!-- Upload File -->
            <div class="form-group">
                   
                <label for="UploadedFile">تحميل الملف</label>
                    <input asp-for="UploadedFile" type="file" class="form-control"  />
                <span asp-validation-for="UploadedFile" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6"></div>
    </div>
  
   
    <br />
    <!-- Submit Buttons -->
    <div class="row">

        <div class="col-md-6">
            <button type="submit" class="button right-4tens float-left">


                <span class="button__text"> إضافة</span>
                <span class="button__icon"><svg xmlns="http://www.w3.org/2000/svg" width="24" viewBox="0 0 24 24" stroke-width="2" stroke-linejoin="round" stroke-linecap="round" stroke="currentColor" height="24" fill="none" class="svg"><line y2="19" y1="5" x2="12" x1="12"></line><line y2="12" y1="12" x2="19" x1="5"></line></svg></span>

            </button>
        </div>
        <div class="col-md-6">
            <a class="buttonremove right-4tens float-right" style="border: 1px solid #333333;background-color: #333333;" asp-action="Index">
                <span class="buttonremove__text"> إلغاء</span>
                <span class="buttonremove__icon" style="background-color: #333333;"> <i class="fa-solid fa-x"></i></span>
            </a>
        </div>
    </div>
</form>
    <div class="card mt-5">
        <div class="card-header">
            <strong class="text-center" style="margin-bottom: 80px;">قصة نجاح</strong>
        </div>
        <div class="card-body">


            <table class="table table-bordered table-striped" id="studentTablesAttachmentTable">
                <thead class="thead-dark">
                    <tr>

                        <th> نوع الجدول</th>
                        <th>المنشأة التعليمية</th>
                        <th>السنة الدراسية</th>
                        <th>الفصل الدراسي</th>
                        <th>القسم</th>
                        <th>التخصص</th>
                        <th>مفعل؟</th>
                        <th>الملف</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @Html.Partial("_StudentTablesAttachmentPartial", (List<TrainigSectorDataEntry.ViewModel.StudentTablesAttachmentVM>)ViewBag.ExistingStudentTablesAttachment)
                </tbody>
            </table>

        </div>
    </div>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")


        <script>
            $(document).ready(function () {

                const $facility = $('#EducationalFacilitiesId');
                const $level = $('#EducationalLevelId');
                const $department = $('#DepartmentsandbranchesId');
                const $specialization = $('#SpecializationId');
                const $specializationContainer = $('#specializationContainer');

                const currentDepartmentId = $('#CurrentDepartmentId').val();
                const currentSpecializationId = $('#CurrentSpecializationId').val();
                const currentLevelId = $('#CurrentEducationalLevelId').val();


                function resetSpecialization() {
                    $specialization.html('<option value="">-- اختر التخصص --</option>');
                    $specialization.prop('required', false);
                    $specializationContainer.hide();
                }

                // ===============================
                // Facility → Educational Levels + Departments
                // ===============================
                $facility.on('change', function () {

                    const facilityId = $(this).val();

                    $level.html('<option value="">-- اختر سنة دراسية --</option>');
                    $department.html('<option value="">-- اختر القسم --</option>');
                    resetSpecialization();

                    if (!facilityId) return;

                    // ===== Load Educational Levels =====
                    $.get('/StudentTablesAttachment/GetLevelsByFacilityId',
                        { facilityId },
                        function (data) {
                            $.each(data, function (_, item) {
                                $level.append(
                                    `<option value="${item.id}">${item.nameAr}</option>`
                                );
                            });
                             if (currentLevelId) {
                             $level.val(currentLevelId);
            }
                        });

                    // ===== Load Departments =====
                    $.get('/StudentTablesAttachment/GetDepartmentsByFacilityId',
                        { facilityId },
                        function (data) {
                            $.each(data, function (_, item) {
                                $department.append(
                                    `<option value="${item.id}">${item.nameAr}</option>`
                                );
                            });

                            // Restore department (Edit / TempData)
                            if (currentDepartmentId) {
                                $department.val(currentDepartmentId).trigger('change');
                            }
                        });
                });

                // ===============================
                // Department → Specialization
                // ===============================
                $department.on('change', function () {

                    const departmentId = $(this).val();
                    resetSpecialization();

                    if (!departmentId) return;

                    $.get('/StudentTablesAttachment/GetSpecializationsByDepartmentId',
                        { departmentId },
                        function (data) {

                            if (!data || data.length === 0) return;

                            $.each(data, function (_, item) {
                                $specialization.append(
                                    `<option value="${item.id}">${item.nameAr}</option>`
                                );
                            });

                            $specialization.prop('required', true);
                            $specializationContainer.show();

                            // Restore specialization
                            if (currentSpecializationId) {
                                $specialization.val(currentSpecializationId);
                            }
                        });
                });

                // ===============================
                // Auto-load (Edit / Validation error)
                // ===============================
                if ($facility.val()) {
                    $facility.trigger('change');
                }
            });
        </script>



}
</div>