    <br />

    <div class="form-group">
        <label asp-for="NameAr" class="control-label">الاسم باللغة العربية</label>
        <input asp-for="NameAr" class="form-control" />
        <span asp-validation-for="NameAr" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NameEn" class="control-label">الاسم باللغة الانجليزي</label>
        <input asp-for="NameEn" class="form-control" />
        <span asp-validation-for="NameEn" class="text-danger"></span>
    </div>

    <br />

    <button type="submit" class="btn btn-primary">إضافة</button>
    <a asp-action="Index" class="btn btn-secondary">إلغاء</a>
</form>
<div class="card mt-5">
    <div class="card-header">
        <strong class="text-center" style="margin-bottom: 80px;">التخصصات</strong>
    </div>
    <div class="card-body">
        <h3>التخصصات</h3>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>الاسم باللغة العربية</th>
                    <th>الاسم باللغة الانجليزية</th>
                    <th>المنشأت التعليمية</th>
                    <th>التاريخ</th>
                    <th>التفعيل</th>
                   
                </tr>
            </thead>
            <tbody>
                @Html.Partial("_SpecializationPartial", (List<TrainigSectorDataEntry.ViewModel.SpecializationVM>)ViewBag.existingSpecialization)

                       </tbody>
        </table>

    </div>
</div>


@section Scripts {
  
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script>
        $('#facilityDropdown').change(function () {
            var facilityId = $(this).val();
            $('#departmentDropdown').empty();

            if (facilityId) {
                $.getJSON('/Specialization/GetDepartmentsByFacilityId',
                    { facilityId: facilityId },
                    function (data) {
                        $('#departmentDropdown')
                            .append('<option value="">-- اختر قسم --</option>');

                        $.each(data, function (i, item) {
                            $('#departmentDropdown')
                                .append(`<option value="${item.id}">${item.name}</option>`);
                        });
                    });
            }
        });
          function confirmDelete(id) {
            Swal.fire({
                title: 'هل أنت متأكد؟',
                text: "لن تتمكن من التراجع عن هذا!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#dc3545', // red
                cancelButtonColor: '#6c757d', // grey
                confirmButtonText: 'نعم، احذف!',
                cancelButtonText: 'إلغاء'
            }).then((result) => {
                if (result.isConfirmed) {
                    // Navigate to Delete action
                    window.location.href = '/Specialization/Delete/' + id;
                }
            });
        }
    </script>



    
}
