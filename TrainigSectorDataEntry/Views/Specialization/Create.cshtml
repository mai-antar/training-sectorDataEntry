    </div>

    <br />

    <button type="submit" class="btn btn-primary">إضافة</button>
    <a asp-action="Index" class="btn btn-secondary">إلغاء</a>
</form>
<div class="card mt-5">
    <div class="card-header">
        <strong class="text-center" style="margin-bottom: 80px;">التخصصات</strong>
    </div>
    <div class="card-body">
        <h3>التخصصات</h3>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>الاسم باللغة العربية</th>
                    <th>الاسم باللغة الانجليزية</th>
                    <th>المنشأت التعليمية</th>
                    <th>التاريخ</th>
                    <th>التفعيل</th>
                   
                </tr>
            </thead>
            <tbody>
                @foreach (var specialization in (List<TrainigSectorDataEntry.ViewModel.SpecializationVM>)ViewBag.existingSpecialization)
                {
                    <tr>
                        <td>@specialization.NameAr</td>
                        <td>@specialization.NameEn</td>
                        <td>@specialization.EducationalFacilityName</td>
                        <td>@specialization.UserCreationDate?.ToString("yyyy-MM-dd")</td>
                        <td>
                            @if (specialization.IsActive)
                            {
                                <span class="badge bg-success">مفعل</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">غير مفعل</span>
                            }
                        </td>
                     
                        <td>
                            <a asp-action="Edit" asp-route-id="@specialization.Id" class="btn btn-sm btn-warning">تعديل</a>

                            <a href="javascript:void(0);" onclick="confirmDelete(@specialization.Id)" class="btn btn-sm btn-danger">حذف</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>


@section Scripts {
  
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script>
        $('#facilityDropdown').change(function () {
            var facilityId = $(this).val();
            $('#departmentDropdown').empty();

            if (facilityId) {
                $.getJSON('/Specialization/GetDepartmentsByFacilityId',
                    { facilityId: facilityId },
                    function (data) {
                        $('#departmentDropdown')
                            .append('<option value="">-- اختر قسم --</option>');

                        $.each(data, function (i, item) {
                            $('#departmentDropdown')
                                .append(`<option value="${item.id}">${item.name}</option>`);
                        });
                    });
            }
        });
          function confirmDelete(id) {
            Swal.fire({
                title: 'هل أنت متأكد؟',
                text: "لن تتمكن من التراجع عن هذا!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#dc3545', // red
                cancelButtonColor: '#6c757d', // grey
                confirmButtonText: 'نعم، احذف!',
                cancelButtonText: 'إلغاء'
            }).then((result) => {
                if (result.isConfirmed) {
                    // Navigate to Delete action
                    window.location.href = '/Specialization/Delete/' + id;
                }
            });
        }
    </script>


