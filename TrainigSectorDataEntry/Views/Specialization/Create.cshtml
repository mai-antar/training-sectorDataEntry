@model TrainigSectorDataEntry.ViewModel.SpecializationVM

@{
    ViewData["Title"] = "التخصصات";
}

<h2>إضافة تخصص</h2>

<form asp-action="Create" method="post" >
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <br />
    <select id="facilityDropdown" class="form-control">
        <option value="">-- اختر منشأة تعليمية --</option>
        @foreach (var item in ViewBag.educationalFacilityList)
        {
            <option value="@item.Value">@item.Text</option>
        }
    </select>
    <br />
    <select id="departmentDropdown"
            name="DepartmentsandbranchesId"
            class="form-control">
        <option value="">-- اختر قسم --</option>
    </select>

