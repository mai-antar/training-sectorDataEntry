        <option value="">-- اختر منشأة تعليمية --</option>
        @foreach (var item in ViewBag.educationalFacilityList)
        {
            <option value="@item.Value">@item.Text</option>
        }
    </select>
    <br />
    <select id="departmentDropdown"
            name="DepartmentsandbranchesId"
            class="form-control">
        <option value="">-- اختر قسم --</option>
    </select>

