@model TrainigSectorDataEntry.ViewModel.SpecializationVM

@{
    ViewData["Title"] = "التخصصات";
}

<h2>إضافة تخصص</h2>

<form asp-action="Create" method="post" >
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <br />



    <div class="form-group">
        <label asp-for="EducationalFacilitiesId" class="control-label">اسم المنشأة التعليمية</label>
        <select asp-for="EducationalFacilitiesId" asp-items="ViewBag.educationalFacilityList" class="form-control">
            <option value="">-- اختر منشأة تعليمية --</option>
        </select>
        <span asp-validation-for="EducationalFacilitiesId" class="text-danger"></span>
    </div>

    <br />
    <div class="form-group">
        <label asp-for="DepartmentsandbranchesId" class="control-label">اسم الشعبة</label>
        <select asp-for="DepartmentsandbranchesId" asp-items="ViewBag.departmentsandbranchList" class="form-control">
            <option value="">-- اختر الشعبة --</option>
        </select>
        <span asp-validation-for="DepartmentsandbranchesId" class="text-danger"></span>
    </div>
    <br />

    <div class="form-group">
        <label asp-for="NameAr" class="control-label">الاسم باللغة العربية</label>
        <input asp-for="NameAr" class="form-control" />
        <span asp-validation-for="NameAr" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NameEn" class="control-label">الاسم باللغة الانجليزي</label>
        <input asp-for="NameEn" class="form-control" />
        <span asp-validation-for="NameEn" class="text-danger"></span>
    </div>

    <br />

    <button type="submit" class="btn btn-primary">إضافة</button>
    <a asp-action="Index" class="btn btn-secondary">إلغاء</a>
</form>
<div class="card mt-5">
    <div class="card-header">
        <strong class="text-center" style="margin-bottom: 80px;">التخصصات</strong>
    </div>
    <div class="card-body">
        <h3>التخصصات</h3>

        <table class="table table-bordered table-striped" id="specializationTable">
            <thead>
                <tr>
                    <th>الاسم باللغة العربية</th>
                    <th>الاسم باللغة الانجليزية</th>
                    <th>المنشأت التعليمية</th>
                    <th>التاريخ</th>
                    <th>التفعيل</th>
                   
                </tr>
            </thead>
            <tbody>
                @Html.Partial("_SpecializationPartial", (List<TrainigSectorDataEntry.ViewModel.SpecializationVM>)ViewBag.existingSpecialization)

                       </tbody>
        </table>

    </div>
</div>


@section Scripts {
  
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script>
           $('#EducationalFacilitiesId').change(function() {
                var facilityId = $(this).val();
                if (facilityId) {
                    $.ajax({
                        url: '@Url.Action("GetspecializationByFacilityId", "Specialization")',
                        type: 'GET',
                        data: { facilityId: facilityId },
                        success: function(data) {
                            $('#specializationTable tbody').html(data);
                        }
                    });
                } else {
                    $('#specializationTable tbody').html('');
                }
            });


          function confirmDelete(id) {
            Swal.fire({
                title: 'هل أنت متأكد؟',
                text: "لن تتمكن من التراجع عن هذا!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#dc3545', // red
                cancelButtonColor: '#6c757d', // grey
                confirmButtonText: 'نعم، احذف!',
                cancelButtonText: 'إلغاء'
            }).then((result) => {
                if (result.isConfirmed) {
                    // Navigate to Delete action
                    window.location.href = '/Specialization/Delete/' + id;
                }
            });
        }
    </script>



    
}
