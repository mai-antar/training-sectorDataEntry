@model IEnumerable<TrainigSectorDataEntry.ViewModel.SpecializationVM>

@{
    ViewData["Title"] = "التخصصات";
}

<div class="container-fluid">
    <div class="contPage">


        <div class="orang2">
            <h3>التخصصات  </h3>
            <div></div>
        </div>


    </div>

    
    <a asp-action="Create" class="button right-4tens " >
        <span class="button__text">  إضافة تخصص</span>
        <span class="button__icon"><svg xmlns="http://www.w3.org/2000/svg" width="24" viewBox="0 0 24 24" stroke-width="2" stroke-linejoin="round" stroke-linecap="round" stroke="currentColor" height="24" fill="none" class="svg"><line y2="19" y1="5" x2="12" x1="12"></line><line y2="12" y1="12" x2="19" x1="5"></line></svg></span>

    </a>





<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            <th>الاسم باللغة العربية</th>
            <th>الاسم باللغة الانجليزية</th>
            <th>المنشأت التعليمية</th>
    @*         <th>التاريخ</th> *@
            <th>التفعيل</th>
  

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var specialization in Model)
        {
            <tr>
                <td>@specialization.NameAr</td>
                <td>@specialization.NameEn</td>
                <td>@specialization.EducationalFacilityName</td>
         @*        <td>@specialization.UserCreationDate?.ToString("yyyy-MM-dd")</td> *@
                <td>
                    @if (specialization.IsActive)
                    {
                        <span class="badge bg-success">مفعل</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">غير مفعل</span>
                    }
                </td>
      
                <td>
                        <a asp-controller="SpecializationImage" asp-action="Index" asp-route-specializationId="@specialization.Id"
                           asp-route-departmentName="@specialization.DepartmentName"
                           asp-route-educationalFacilitiesName="@specialization.EducationalFacilityName"
                           class="btn btn-sm btn-info"><i class="fas fa-link"></i> التفاصيل / الصور</a>

                        <a asp-action="Edit" asp-route-id="@specialization.Id" class="buttonedit right-4tens ">
                            <span class="buttonedit__text">تعديل</span>
                            <span class="buttonedit__icon"> <i class="fas fa-edit"></i></span>
                        </a>

                        <a href="javascript:void(0);" class="buttonremove right-4tens "
                           onclick="confirmDelete(@specialization.Id)">
                            <span class="buttonremove__text"> حذف</span>
                            <span class="buttonremove__icon"> <i class="fa-solid fa-x"></i></span>
                        </a>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>
<script>
    function confirmDelete(id) {
        Swal.fire({
            title: 'هل أنت متأكد؟',
            text: "لن تتمكن من التراجع عن هذا!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#dc3545', // red
            cancelButtonColor: '#6c757d', // grey
            confirmButtonText: 'نعم، احذف!',
            cancelButtonText: 'إلغاء'
        }).then((result) => {
            if (result.isConfirmed) {
                // Navigate to Delete action
                window.location.href = '/Specialization/Delete/' + id;
            }
        });
    }
</script>


