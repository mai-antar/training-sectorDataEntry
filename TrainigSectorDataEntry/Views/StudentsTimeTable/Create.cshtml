@model TrainigSectorDataEntry.ViewModel.StudentsTimeTableVM

@{
    ViewData["Title"] = "إضافة جدول الطلاب";
}

<h2>إضافة جدول الطلاب</h2>
<br />
<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <br />
    <!-- Educational Facility -->
    <div class="form-group">
        <label for="EducationalFacilityId">المنشأة التعليمية</label>
        <select id="EducationalFacilityId" name="EducationalFacilitiesId" class="form-control" required>
            <option value="">-- اختر المنشأة --</option>
            @foreach (var EducationalFacility in (SelectList)ViewBag.EducationalFacilityList)
            {
                <option value="@EducationalFacility.Value">@EducationalFacility.Text</option>
            }
        </select>
    </div>
    <br />
    <!-- Educational Level -->
    <div class="form-group">
        <label asp-for="EducationalLevelId" class="control-label">المرحلة التعليمية</label>
        <select asp-for="EducationalLevelId" id="EducationalLevelId" class="form-control" required>
            <option value="">-- اختر المرحلة --</option>
        </select>
        <span asp-validation-for="EducationalLevelId" class="text-danger"></span>
    </div>
    <br />
    <!-- IsCurrent -->
    <div class="form-group">
        <label asp-for="IsCurrent" class="control-label">الحالي؟</label>
        <input asp-for="IsCurrent" type="checkbox" class="form-check-input" />
    </div>
    <br />
    <!-- IsActive -->
    <div class="form-group">
        <label asp-for="IsActive" class="control-label">مفعل؟</label>
        <input asp-for="IsActive" type="checkbox" class="form-check-input" />
    </div>
    <br />
    <!-- Upload File -->
    <div class="form-group">
        <label for="UploadedFile">تحميل الملف</label>
        <input asp-for="UploadedFile" type="file" class="form-control" />
        <span asp-validation-for="UploadedFile" class="text-danger"></span>
    </div>
    <br />
    <!-- Submit Buttons -->
    <button type="submit" class="btn btn-primary">حفظ</button>
    <a asp-action="Index" class="btn btn-secondary">إلغاء</a>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script>
        $(document).ready(function () {
            $('#EducationalFacilityId').change(function () {
                var facilityId = $(this).val();

                if (facilityId) {
                    $.ajax({
                        url: '/StudentsTimeTable/GetLevelsByFacilityId',
                        type: 'GET',
                        data: { facilityId: facilityId },
                        success: function (data) {
                            var $levels = $('#EducationalLevelId');
                            $levels.empty();
                            $levels.append('<option value="">-- اختر المرحلة --</option>');
                            $.each(data, function (i, level) {
                                $levels.append('<option value="' + level.value + '">' + level.text + '</option>');
                            });
                        }
                    });
                } else {
                    $('#EducationalLevelId').empty().append('<option value="">-- اختر المرحلة --</option>');
                }
            });
        });
    </script>
}
