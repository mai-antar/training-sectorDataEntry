@model TrainigSectorDataEntry.ViewModel.StudentsTimeTableVM

@{
    ViewData["Title"] = "تعديل جدول الطلاب";
}


<div class="container-fluid">
    <div class="contPage">


        <div class="orang2">
            <h3>تعديل جدول الطلاب </h3>
            <div></div>
        </div>


    </div>
<br />
<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <br />
    <div class="row">
        <div class="col-md-6">
            <!-- Educational Facility -->
            <div class="form-group">
                <input type="hidden" id="CurrentFacilityId" value="@Model.EducationalFacilitiesId" />

                <label asp-for="EducationalFacilitiesId">المنشأة التعليمية</label>
                <select asp-for="EducationalFacilitiesId" asp-items="(SelectList)ViewBag.EducationalFacilityList" class="form-control">
                    <option value="">-- اختر المرحلة --</option>
                </select>

                <span asp-validation-for="EducationalFacilitiesId" class="text-danger"></span>

            </div>
        </div>
        <div class="col-md-6">
            <!-- Educational Level -->
            <div class="form-group">
                <input type="hidden" id="CurrentLevelId" value="@Model.EducationalLevelId" />

                <label asp-for="EducationalLevelId">المرحلة التعليمية</label>
                <select asp-for="EducationalLevelId" asp-items="(SelectList)ViewBag.EducationalLevelList" class="form-control">
                    <option value="">-- اختر المرحلة --</option>
                </select>

                <span asp-validation-for="EducationalLevelId" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <!-- IsCurrent -->
            <div class="form-group">
                <label asp-for="IsCurrent" class="control-label">الحالي؟</label>
                <input asp-for="IsCurrent" type="checkbox" class="form-check-input" />
            </div>
        </div>
        <div class="col-md-6">
            <!-- IsActive -->
            <div class="form-group">
                <label asp-for="IsActive" class="control-label">مفعل؟</label>
                <input asp-for="IsActive" type="checkbox" class="form-check-input" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <!-- File Upload -->
            <div class="form-group">
                <label for="UploadedFile">تحديث الملف (اختياري)</label>
                <input asp-for="UploadedFile" type="file" class="form-control" />
                <span asp-validation-for="UploadedFile" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <!-- Existing File Preview -->
            @if (!string.IsNullOrEmpty(Model.FilePath))
            {
                <div class="form-group">
                    <label>الملف الحالي:</label><br />
                    <a href="@Model.FilePath" target="_blank">تحميل الملف الحالي</a>
                </div>
            }
        </div>
    </div>

   
    <br />
    <div class="row">

        <div class="col-md-6">

            <button type="submit" class="button right-4tens float-left">
                <span class="button__text"> حفظ </span>
                <span class="button__icon">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="svg save-icon">

                        <path d="M19 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11l5 5v11a2 2 0 0 1-2 2z"></path>
                        <polyline points="17 21 17 13 7 13 7 21"></polyline>
                        <polyline points="7 3 7 8 15 8"></polyline>

                    </svg>
                </span>
            </button>


        </div>
        <div class="col-md-6">

            <a class="buttonremove right-4tens float-right" style="border: 1px solid #333333;background-color: #333333;" asp-action="Index">

                <span class="buttonremove__text"> إلغاء</span>
                <span class="buttonremove__icon" style="background-color: #333333;"> <i class="fa-solid fa-x"></i></span>
            </a>

        </div>

    </div>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script>
        $(document).ready(function () {
            $('#EducationalFacilityId').change(function () {
                var facilityId = $(this).val();

                if (facilityId) {
                    $.ajax({
                        url: '/StudentsTimeTable/GetLevelsByFacilityId',
                        type: 'GET',
                        data: { facilityId: facilityId },
                        success: function (data) {
                            var $levels = $('#EducationalLevelId');
                            var selectedLevelId = $('#CurrentLevelId').val();
                            // var selectedFacilityId = $('#CurrentFacilityId').val();
                            
                            $levels.empty();
                            $levels.append('<option value="">-- اختر المرحلة --</option>');
                            $.each(data, function (i, level) {
                                $levels.append('<option value="' + level.value + '">' + level.text + '</option>');
                            });
                        }
                    });
                }
            });
        });
   

    </script>
}
</div>