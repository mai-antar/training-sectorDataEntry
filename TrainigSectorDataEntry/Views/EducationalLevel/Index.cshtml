@model IEnumerable<TrainigSectorDataEntry.ViewModel.EducationalLevelVM>

@{
    ViewData["Title"] = "المستوى التعليمي";
}

<h2 class="text-center" style="margin-bottom: 80px;">المستوى التعليمي</h2>

<a asp-action="Create" class="btn btn-success mb-3">إضافة مستوى تعليمي</a>

<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            <th>الاسم باللغة العربية</th>
            <th>الاسم باللغة الانجليزية</th>
            <th>المنشأت التعليمية</th>
            <th>التفعيل</th>


            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var educationalLevel in Model)
        {
            <tr>
                <td>@educationalLevel.NameAr</td>
                <td>@educationalLevel.NameEn</td>
                <td>@educationalLevel.EducationalFacilities?.NameAr</td>
                <td>
                    @if (educationalLevel.IsActive)
                    {
                        <span class="badge bg-success">مفعل</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">غير مفعل</span>
                    }
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@educationalLevel.Id" class="btn btn-sm btn-warning">تعديل</a>

                    <a asp-action="Delete" asp-route-id="@educationalLevel.Id" class="btn btn-sm btn-danger">حذف</a>
                </td>
            </tr>
        }
    </tbody>
</table>
