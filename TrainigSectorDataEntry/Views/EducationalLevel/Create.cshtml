@model TrainigSectorDataEntry.ViewModel.EducationalLevelVM

@{
    ViewData["Title"] = "المستوى التعليمي";
}

<h2>إضافة مستوى تعليمي</h2>
<br />

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <br />
    <div class="form-group">
        <label asp-for="EducationalFacilitiesId" class="control-label">اسم المنشأة التعليمية</label>
        <select asp-for="EducationalFacilitiesId" asp-items="ViewBag.educationalFacilityList" class="form-control">
            <option value="">-- اختر منشأة تعليمية --</option>
        </select>
        <span asp-validation-for="EducationalFacilitiesId" class="text-danger"></span>
    </div>
    <br />

    <div class="form-group">
        <label asp-for="NameAr" class="control-label">الاسم باللغة العربية</label>
        <input asp-for="NameAr" class="form-control" />
        <span asp-validation-for="NameAr" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="NameEn" class="control-label">الاسم باللغة الانجليزي</label>
        <input asp-for="NameEn" class="form-control" />
        <span asp-validation-for="NameEn" class="text-danger"></span>
    </div>

    <br />

    <button type="submit" class="btn btn-primary">إضافة</button>
    <a asp-action="Index" class="btn btn-secondary">إلغاء</a>
</form>
<div class="card mt-5">
    <div class="card-header">
        <strong class="text-center" style="margin-bottom: 80px;">المستوى التعليمي</strong>
    </div>
    <div class="card-body">
        <h3>المستوى التعليمي</h3>

        <table class="table table-bordered table-striped" id="educationalLevelTable">
            <thead>
                <tr>
                    <th>الاسم باللغة العربية</th>
                    <th>الاسم باللغة الانجليزية</th>
                    <th>المنشأت التعليمية</th>
                    <th>التفعيل</th>

                </tr>
            </thead>
            <tbody>
                @Html.Partial("_EducationalLevelPartial", (List<TrainigSectorDataEntry.ViewModel.EducationalLevelVM>)ViewBag.existingEducationalLevel)
                      
            </tbody>
        </table>

    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function() {
            $('#EducationalFacilitiesId').change(function() {
                var facilityId = $(this).val();
                if (facilityId) {
                    $.ajax({
                        url: '@Url.Action("GetEducationalLevelByFacility", "EducationalLevel")',
                        type: 'GET',
                        data: { facilityId: facilityId },
                        success: function(data) {
                            $('#educationalLevelTable tbody').html(data);
                        }
                    });
                } else {
                    $('#educationalLevelTable tbody').html('');
                }
            });
        });
    </script>
}


