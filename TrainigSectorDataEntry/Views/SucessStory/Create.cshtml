@model TrainigSectorDataEntry.ViewModel.SucessStoryVM

@{
    ViewData["Title"] = "إضافة قصة نجاح";
}

<h2>إضافة قصة نجاح</h2>

<br />

<form asp-action="Create" method="post" enctype="multipart/form-data">
  
    <br />
    <div class="form-group">
        <label asp-for="TitleAr">عنوان قصة النجاح باللغة العربية</label>
        <input asp-for="TitleAr" class="form-control" />
        <span asp-validation-for="TitleAr" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="TitleEn">عنوان قصة النجاح باللغة الانجليزية</label>
        <input asp-for="TitleEn" class="form-control" />
        <span asp-validation-for="TitleEn" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="TrainigSectorId">الجهة</label>
        <select asp-for="TrainigSectorId" asp-items="ViewBag.TrainingSectorList" class="form-control">
            <option value="">-- اختر الجهة --</option>
        </select>
  
        <span asp-validation-for="TrainigSectorId" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        <label for="UploadedImage">تحميل الصورة</label>
        <input asp-for="UploadedImage" type="file" multiple class="form-control" />
        <span asp-validation-for="UploadedImage" class="text-danger"></span>
    </div>
@*     <div class="form-group">
        <label asp-for="IsExternalLink">هل هو رابط خارجي؟</label>
        <input asp-for="IsExternalLink" type="checkbox" class="form-check-input" id="isExternalLinkCheckbox" />
    </div>

    <div class="form-group" id="externalLinkDiv" style="display:none;">
        <label asp-for="VedioPath">رابط الفيديو</label>
        <input asp-for="VedioPath" class="form-control" />
        <span asp-validation-for="VedioPath" class="text-danger"></span>
    </div>

    <div class="form-group" id="uploadDiv">
        <label asp-for="VedioFile">ارفع الفيديو</label>
        <input asp-for="VedioFile" type="file" class="form-control" />
        <span asp-validation-for="VedioFile" class="text-danger"></span>
    </div>
 *@
    <br />
    <input type="submit" value="حفظ" class="btn btn-primary" />
</form>
<br />
<div class="card mt-5">
    <div class="card-header">
        <strong class="text-center" style="margin-bottom: 80px;">قصة نجاح</strong>
    </div>
    <div class="card-body">
        <h3>قصة نجاح</h3>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>عنوان قصة النجاح باللغة العربية</th>
                    <th>عنوان قصة النجاح باللغة الانجليزية</th>
                    <th>الجهة</th>
                    <th>التفعيل</th>
                    <th>الصورة</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var sucessStory in (List<TrainigSectorDataEntry.ViewModel.SucessStoryVM>)ViewBag.ExistingSucessStory)
                {
                    <tr>
                        <td>@sucessStory.TitleAr</td>
                        <td>@sucessStory.TitleEn</td>
                        <td>@sucessStory.TrainigSector?.NameAr</td>
                        <td>
                            @if (sucessStory.IsActive)
                            {
                                <span class="badge bg-success">مفعل</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">غير مفعل</span>
                            }
                        </td>
                        <td>

                            <img src="@("/Storage/" + sucessStory.ImagePath)" alt="Project Image" style="width: 60px; height: 60px; object-fit: cover; margin: 2px;" />



                        </td>
        @*                 <td>
                            @if (sucessStory.IsExternalLink == true && !string.IsNullOrEmpty(sucessStory.VedioPath))
                            {
                                <a href="@sucessStory.VedioPath" target="_blank">لينك خارجي</a>
                            }
                            else if (!string.IsNullOrEmpty(sucessStory.VedioPath))
                            {
                                <video width="200" height="140" controls>
                                    <source src="@sucessStory.VedioPath" type="video/mp4" />
                                    لا يدعم متصفحك علامة الفيديو.
                                </video>
                            }
                        </td> *@
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>
