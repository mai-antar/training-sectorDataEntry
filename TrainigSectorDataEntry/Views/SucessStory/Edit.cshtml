                </a>

            </div>

        </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function toggleInputFields() {
            const isExternal = document.getElementById('isExternalLinkCheckbox').checked;
            document.getElementById('externalLinkDiv').style.display = isExternal ? 'block' : 'none';
            document.getElementById('uploadDiv').style.display = isExternal ? 'none' : 'block';
        }

        // Listen to checkbox changes
        document.getElementById('isExternalLinkCheckbox').addEventListener('change', toggleInputFields);

        // Trigger on page load to show correct field
        window.addEventListener('DOMContentLoaded', function () {
            toggleInputFields();
        });
    </script>


}

</div>