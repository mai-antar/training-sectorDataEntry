@model TrainigSectorDataEntry.ViewModel.QualityCertificateVM

@{
    ViewData["Title"] = "شهادات الجودة";
}

<h2>إضافة شهادات الجودة</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="EducationalFacilitiesId" class="control-label">اسم المنشأة التعليمية</label>
        <select asp-for="EducationalFacilitiesId" asp-items="ViewBag.educationalFacilityList" class="form-control">
            <option value="">-- اختر منشأة تعليمية --</option>
        </select>
        <span asp-validation-for="EducationalFacilitiesId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TitleAr" class="control-label">عنوان شهادة الجودة باللغة العربية</label>
        <input asp-for="TitleAr" class="form-control" />
        <span asp-validation-for="TitleAr" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TitleEn" class="control-label">عنوان شهادة الجودة باللغة الانجليزية</label>
        <input asp-for="TitleEn" class="form-control" />
        <span asp-validation-for="TitleEn" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label for="UploadedImage">تحميل الصورة</label>
        <input asp-for="UploadedImage" type="file" multiple class="form-control" />
        <span asp-validation-for="UploadedImage" class="text-danger"></span>
    </div>



    <button type="submit" class="btn btn-primary">إضافة</button>
    <a asp-action="Index" class="btn btn-secondary">إلغاء</a>
</form>
<div class="card mt-5">
    <div class="card-header">
        <strong class="text-center" style="margin-bottom: 80px;">شهادات الجودة</strong>
    </div>
    <div class="card-body">
        <h3>شهادات الجودة</h3>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>العنوان باللغة العربية</th>
                    <th>العنوان باللغة الانجليزية</th>
                    <th>المنشأت التعليمية</th>
                    <th>التفعيل</th>
                    <th>الصورة</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var qualityCertificate in (List<TrainigSectorDataEntry.ViewModel.QualityCertificateVM>)ViewBag.existingQualityCertificate)
                {
                    <tr>
                        <td>@qualityCertificate.TitleAr</td>
                        <td>@qualityCertificate.TitleEn</td>
                        <td>@qualityCertificate.EducationalFacilities?.NameAr</td>
                        <td>@qualityCertificate.UserCreationDate?.ToString("yyyy-MM-dd")</td>
                        <td>
                            @if (qualityCertificate.IsActive)
                            {
                                <span class="badge bg-success">مفعل</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">غير مفعل</span>
                            }
                        </td>
                        <td>

                            <img src="@qualityCertificate.ImagePath" alt="Project Image" style="width: 60px; height: 60px; object-fit: cover; margin: 2px;" />

                            

                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@qualityCertificate.Id" class="btn btn-sm btn-warning">تعديل</a>

                            <a asp-action="Delete" asp-route-id="@qualityCertificate.Id" class="btn btn-sm btn-danger">حذف</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
