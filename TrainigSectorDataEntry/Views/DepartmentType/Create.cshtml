@model TrainigSectorDataEntry.ViewModel.DepartmentTypeVM

@{
    ViewData["Title"] = "انواع الاقسام";
}


<div class="container-fluid">
    <div class="contPage">


        <div class="orang2">
            <h3>إضافة انواع الاقسام </h3>
            <div></div>
        </div>


    </div>
<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

 @*    <div class="form-group">
        <label asp-for="SpecializationId" class="control-label">اسم التخصص</label>
        <select asp-for="SpecializationId" asp-items="ViewBag.educationalFacilityList" class="form-control">
            <option value="">-- اختر التخصص --</option>
        </select>
        <span asp-validation-for="SpecializationId" class="text-danger"></span>
    </div> *@
    <br />
    <div class="form-group">
        <label asp-for="NameAr" class="control-label">الاسم باللغة العربية</label>
        <input asp-for="NameAr" class="form-control" />
        <span asp-validation-for="NameAr" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="NameEn" class="control-label">الاسم باللغة الانجليزي</label>
        <input asp-for="NameEn" class="form-control" />
        <span asp-validation-for="NameEn" class="text-danger"></span>
    </div>
    <br />

    <div class="row">
        <div class="col-md-6">
            <button type="submit" class="button right-4tens float-left">
                <span class="button__text"> إضافة</span>
                <span class="button__icon"><svg xmlns="http://www.w3.org/2000/svg" width="24" viewBox="0 0 24 24" stroke-width="2" stroke-linejoin="round" stroke-linecap="round" stroke="currentColor" height="24" fill="none" class="svg"><line y2="19" y1="5" x2="12" x1="12"></line><line y2="12" y1="12" x2="19" x1="5"></line></svg></span>

            </button>
        </div>

        <div class="col-md-6">
            <a class="buttonremove right-4tens float-right" style="border: 1px solid #333333;background-color: #333333;" href="/TrainingCourse">
                <span class="buttonremove__text"> إلغاء</span>
                <span class="buttonremove__icon" style="background-color: #333333;"> <i class="fa-solid fa-x"></i></span>
            </a>
        </div>

        </div>

</form>
<div class="card mt-5">
    <div class="card-header">
        <strong class="text-center" style="margin-bottom: 80px;">انواع الاقسام</strong>
    </div>
    <div class="card-body">
        <h3>انواع الاقسام</h3>

        <table class="table table-bordered table-striped">
                <thead class="thead-dark">
                <tr>
                    <th>الاسم باللغة العربية</th>
                    <th>الاسم باللغة الانجليزية</th>
                    @* <th>التخصص</th> *@
                    <th>التفعيل</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var departmentType in (List<TrainigSectorDataEntry.ViewModel.DepartmentTypeVM>)ViewBag.existingDepartmentType)
                {
                    <tr>
                        <td>@departmentType.NameAr</td>
                        <td>@departmentType.NameEn</td>
                   @*      <td>@departmentType.Specialization?.NameAr</td> *@
                        <td>
                            @if (departmentType.IsActive)
                            {
                                <span class="badge bg-success">مفعل</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">غير مفعل</span>
                            }
                        </td>

                        <td>

                                <a class="buttonedit right-4tens " href="/TrainingCourse/Edit/13">
                                    <span asp-route-id="@departmentType.ID" class="buttonedit__text">تعديل</span>
                                    <span class="buttonedit__icon"> <i class="fas fa-edit"></i></span>
                                </a>



                                <a class="buttonremove right-4tens " href="/TrainingCourse/Delete/13">
                                    <span asp-route-id="@departmentType.ID" class="buttonremove__text"> حذف</span>
                                    <span class="buttonremove__icon"> <i class="fa-solid fa-x"></i></span>
                                </a>





                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
</div>